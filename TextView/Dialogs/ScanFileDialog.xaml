<Window Name="self" x:Class="NeoEdit.TextView.Dialogs.ScanFileDialog" x:ClassModifier="internal"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	SizeToContent="WidthAndHeight" Visibility="Visible" WindowStyle="None">

	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition Height="10"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<TextBlock Grid.Row="0" Grid.Column="0" Text="Scanning file:"/>

		<TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding FileName, ElementName=self}"/>

		<ProgressBar Grid.Row="2" Width="400" Height="10" Value="{Binding Progress, ElementName=self}"/>

		<Button Grid.Row="4" Grid.Column="1" Content="Cancel" IsCancel="True" Click="CancelClick" Width="80"/>
	</Grid>

</Window>

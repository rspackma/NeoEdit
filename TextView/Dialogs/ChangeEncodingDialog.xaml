<guiControls:ModalDialog Name="self" x:Class="NeoEdit.TextView.Dialogs.ChangeEncodingDialog" x:ClassModifier="internal"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiControls="clr-namespace:NeoEdit.GUI.Controls;assembly=NeoEdit.GUI"
	SizeToContent="WidthAndHeight" Visibility="Visible"
	Title="Change Encoding" FocusManager.FocusedElement="{Binding ElementName=inputFile}">

	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="500"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition Height="10"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<Label Grid.Row="0" Grid.Column="0" Content="_Input File:" HorizontalAlignment="Right" Target="{Binding ElementName=inputFile}"/>
		<TextBox Grid.Row="0" Grid.Column="1" Name="inputFile" Text="{Binding InputFile, ElementName=self, UpdateSourceTrigger=PropertyChanged}"/>
		<Button Grid.Row="0" Grid.Column="2" Width="60" Content="_Browse" Click="BrowseInputFile"/>

		<Label Grid.Row="1" Grid.Column="0" Content="Encoding:" HorizontalAlignment="Right"/>
		<Label Grid.Row="1" Grid.Column="1" Content="{Binding InputCodePage, ElementName=self}"/>
		
		<Label Grid.Row="2" Grid.Column="0" Content="_Output File:" HorizontalAlignment="Right" Target="{Binding ElementName=outputFile}"/>
		<TextBox Grid.Row="2" Grid.Column="1" Name="outputFile" Text="{Binding OutputFile, ElementName=self, UpdateSourceTrigger=PropertyChanged}"/>
		<Button Grid.Row="2" Grid.Column="2" Width="60" Content="B_rowse" Click="BrowseOutputFile"/>

		<Label Grid.Row="3" Grid.Column="0" Content="_Encoding:" HorizontalAlignment="Right" Target="{Binding ElementName=outputCodePage}"/>
		<ComboBox Grid.Row="3" Grid.Column="1" Name="outputCodePage" SelectedValue="{Binding OutputCodePage, ElementName=self, UpdateSourceTrigger=PropertyChanged}"/>

		<UniformGrid Grid.Row="5" Grid.ColumnSpan="3" HorizontalAlignment="Right" Rows="1">
			<Button Click="OkClick" IsDefault="True" Content="Ok" Padding="10,1"/>
			<Button IsCancel="True" Content="Cancel" Padding="10,1"/>
		</UniformGrid>
	</Grid>

</guiControls:ModalDialog>

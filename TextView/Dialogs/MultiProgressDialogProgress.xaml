<Grid Name="self" x:Class="NeoEdit.TextView.Dialogs.MultiProgressDialogProgress" x:ClassModifier="internal"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Margin="2">

	<Grid.ColumnDefinitions>
		<ColumnDefinition/>
	</Grid.ColumnDefinitions>
	<Grid.RowDefinitions>
		<RowDefinition/>
		<RowDefinition Height="10"/>
	</Grid.RowDefinitions>

	<TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding ItemName , ElementName=self}" HorizontalAlignment="Center"/>
	<ProgressBar Grid.Row="1" Grid.Column="0" Value="{Binding Progress, ElementName=self}"/>

</Grid>

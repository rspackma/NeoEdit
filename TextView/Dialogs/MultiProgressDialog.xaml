<Window Name="self" x:Class="NeoEdit.TextView.Dialogs.MultiProgressDialog" x:ClassModifier="internal"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	SizeToContent="WidthAndHeight" Visibility="Visible" WindowStyle="None" MinWidth="400">

	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition Height="5"/>
			<RowDefinition/>
			<RowDefinition Height="10"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<TextBlock Grid.Row="0" Text="{Binding Status, ElementName=self}"/>
		<Grid Grid.Row="1" Name="parentProgress">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition/>
				<RowDefinition Height="10"/>
			</Grid.RowDefinitions>
		</Grid>

		<ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
			<UniformGrid Name="childrenProgress"/>
		</ScrollViewer>

		<Button Grid.Row="5" Content="Cancel" IsCancel="True" Click="CancelClick" Width="80"/>
	</Grid>

</Window>

<guiControls:NEWindow Name="self" x:Class="NeoEdit.Rip.Ripper"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiControls="clr-namespace:NeoEdit.GUI.Controls;assembly=NeoEdit.GUI"
	xmlns:rip="clr-namespace:NeoEdit.Rip"
	Title="NeoEdit Ripper" Width="800" Height="600" Visibility="Visible" FocusManager.FocusedElement="{Binding ElementName=ripItems}">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<rip:RipMenu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" x:Name="menu"/>

		<Label Grid.Row="1" Grid.Column="0" Content="_Items:" Target="{Binding ElementName=ripItems}" HorizontalAlignment="Right"/>
		<ListView Grid.Row="1" Grid.Column="1" Name="ripItems" ItemsSource="{Binding RipItems, ElementName=self}" SelectionMode="Extended">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Description"/>
					<GridViewColumn Header="Output" DisplayMemberBinding="{Binding FileName}"/>
				</GridView>
			</ListView.View>
		</ListView>

		<DockPanel Grid.Row="1" Grid.Column="2">
			<Button DockPanel.Dock="Top" Click="OnRemoveClick" Content="_Remove"/>
			<Button DockPanel.Dock="Top" Click="OnSelectExistingClick" Content="Select _Existing"/>
			<Button DockPanel.Dock="Bottom" Click="OnGoClick" Content="_Go" VerticalAlignment="Bottom"/>
		</DockPanel>

		<Label Grid.Row="2" Grid.Column="0" Content="_Directory:" Target="{Binding ElementName=outputDirectory}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
		<TextBox Grid.Row="2" Grid.Column="1" Name="outputDirectory" Text="{Binding OutputDirectory, ElementName=self, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
	</Grid>

</guiControls:NEWindow>

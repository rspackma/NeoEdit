<guiControls:ModalDialog x:Name="self" x:Class="NeoEdit.Rip.Dialogs.AddCDDialog" x:ClassModifier="internal"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiControls="clr-namespace:NeoEdit.GUI.Controls;assembly=NeoEdit.GUI"
	Title="Add CD" SizeToContent="Height" Width="600" FocusManager.FocusedElement="{Binding ElementName=drive}">

	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="10"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Label Grid.Row="0" Grid.Column="0" Content="_Drive:" Target="{Binding ElementName=drive}" HorizontalAlignment="Right"/>
		<ComboBox Grid.Row="0" Grid.Column="1" x:Name="drive" ItemsSource="{Binding Drives, ElementName=self}" SelectedValue="{Binding Drive, ElementName=self}"/>

		<UniformGrid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Right" Rows="1">
			<Button Click="OkClick" IsDefault="True" Content="Ok" Padding="10,1"/>
			<Button IsCancel="True" Content="Cancel" Padding="10,1"/>
		</UniformGrid>
	</Grid>

</guiControls:ModalDialog>

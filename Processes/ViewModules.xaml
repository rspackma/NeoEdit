<Window Name="self" x:Class="NeoEdit.Processes.ViewModules" x:ClassModifier="internal"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:processes="clr-namespace:NeoEdit.Processes"
	Title="View Modules" SizeToContent="WidthAndHeight" FocusManager.FocusedElement="{Binding ElementName=value}">

	<Window.Resources>
		<RoutedUICommand x:Key="GotoCommand" Text="Goto"/>
	</Window.Resources>

	<Window.CommandBindings>
		<CommandBinding Command="{StaticResource GotoCommand}" Executed="GotoCommandExecuted"/>
	</Window.CommandBindings>

	<Window.InputBindings>
		<KeyBinding Key="G" Modifiers="Control" Command="{StaticResource GotoCommand}"/>
	</Window.InputBindings>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<GroupBox Grid.Row="0" Grid.Column="0" Header="Process">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<Label Grid.Row="0" Grid.Column="0" Content="Name"/>
				<Label Grid.Row="0" Grid.Column="1" Content="PID"/>

				<TextBox Grid.Row="1" Grid.Column="0" IsReadOnly="True" Text="{Binding ProcessName, ElementName=self}"/>
				<TextBox Grid.Row="1" Grid.Column="1" IsReadOnly="True" Text="{Binding PID, ElementName=self}"/>
			</Grid>
		</GroupBox>

		<GroupBox Grid.Row="1" Grid.Column="0" Header="Modules">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="500"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<processes:ModuleItemGrid x:Name="modules" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Items="{Binding Modules, ElementName=self}"/>

				<UniformGrid Grid.Row="1" Grid.Column="0" Rows="1">
					<Button Command="{StaticResource GotoCommand}" Content="_Goto" Padding="10,0"/>
				</UniformGrid>
			</Grid>
		</GroupBox>

	</Grid>

</Window>

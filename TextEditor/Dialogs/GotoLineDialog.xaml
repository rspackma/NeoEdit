<Window Name="self" x:Class="NeoEdit.GUI.Dialogs.GotoLineDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:NeoEdit.GUI.Common"
	Title="Goto Line" SizeToContent="WidthAndHeight" FocusManager.FocusedElement="{Binding ElementName=line}">

	<StackPanel Margin="10,5">
		<StackPanel.Style>
			<Style>
				<Style.Resources>
					<Style TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
						<Setter Property="Padding" Value="0,0,10,0"/>
					</Style>
					<Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
						<Setter Property="Focusable" Value="False"/>
						<Setter Property="Margin" Value="5,0,0,0"/>
					</Style>
					<Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
						<Setter Property="Margin" Value="0,0,0,10"/>
					</Style>
				</Style.Resources>
			</Style>
		</StackPanel.Style>

		<Label>
			<Label.Content>
				<TextBlock>
					<TextBlock.Text>
						<MultiBinding StringFormat="{}Go to line: ({0} - {1})">
							<Binding ElementName="self" Path="MinLine"/>
							<Binding ElementName="self" Path="MaxLine"/>
						</MultiBinding>
					</TextBlock.Text></TextBlock>
			</Label.Content>
		</Label>
		<TextBox Name="line" Width="300" Text="{Binding Line, ElementName=self, UpdateSourceTrigger=PropertyChanged}"/>

		<CheckBox IsChecked="{Binding Relative, ElementName=self}" Content="_Relative" Focusable="False"/>
		
		<UniformGrid HorizontalAlignment="Right" Columns="2">
			<Button Name="okClick" IsDefault="True" Content="Ok"/>
			<Button IsCancel="True" Content="Cancel"/>
		</UniformGrid>
	</StackPanel>
</Window>

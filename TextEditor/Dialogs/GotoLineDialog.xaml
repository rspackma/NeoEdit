<Window Name="self" x:Class="NeoEdit.GUI.Dialogs.GotoLineDialog" x:ClassModifier="internal"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
	Title="Go To Line" SizeToContent="WidthAndHeight" FocusManager.FocusedElement="{Binding ElementName=line}">

	<StackPanel Margin="10">
		<Label>
			<Label.Content>
				<TextBlock>
					<TextBlock.Text>
						<MultiBinding StringFormat="{}Go to line: ({0} - {1})">
							<Binding ElementName="self" Path="MinLine"/>
							<Binding ElementName="self" Path="MaxLine"/>
						</MultiBinding>
					</TextBlock.Text></TextBlock>
			</Label.Content>
		</Label>
		<xctk:IntegerUpDown Name="line" Width="300" Value="{Binding Line, ElementName=self}" Minimum="{Binding MinLine, ElementName=self}" Maximum="{Binding MaxLine, ElementName=self}"/>

		<CheckBox IsChecked="{Binding Relative, ElementName=self}" Content="_Relative" Focusable="False"/>

		<UniformGrid HorizontalAlignment="Right" Columns="2">
			<Button Click="OkClick" IsDefault="True" Content="Ok" Padding="10,1"/>
			<Button IsCancel="True" Content="Cancel" Padding="10,1"/>
		</UniformGrid>
	</StackPanel>
</Window>

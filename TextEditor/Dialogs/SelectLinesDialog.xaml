<Window Name="self" x:Class="NeoEdit.TextEditor.Dialogs.SelectLinesDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:guiCommon="clr-namespace:NeoEdit.GUI.Common;assembly=GUI"
	Title="Select Lines" SizeToContent="WidthAndHeight" FocusManager.FocusedElement="{Binding ElementName=lineMult}">

	<StackPanel Margin="10,5">
		<Label Content="Select every nth line:" Target="{Binding ElementName=lineMult}"/>
		<StackPanel Orientation="Horizontal">
			<TextBox Name="lineMult" Margin="0,0,0,10" Width="500" Text="{Binding LineMult, ElementName=self}"/>
			<ScrollBar Name="spinner" SmallChange="1" Minimum="1" Maximum="1000000" Value="{Binding LineMult, ElementName=self}">
				<ScrollBar.RenderTransform>
					<TransformGroup>
						<ScaleTransform>
							<ScaleTransform.ScaleY>
								<MultiBinding Converter="{guiCommon:ExpressionConverter}" ConverterParameter="'0'-[0]/[1]">
									<Binding ElementName="lineMult" Path="ActualHeight"/>
									<Binding ElementName="spinner" Path="ActualHeight"/>
								</MultiBinding>
							</ScaleTransform.ScaleY>
						</ScaleTransform>
						<TranslateTransform Y="{Binding ActualHeight, ElementName=lineMult}"/>
					</TransformGroup>
				</ScrollBar.RenderTransform>
			</ScrollBar>
		</StackPanel>

		<CheckBox Name="ignoreBlankLines" Content="Ignore _blank lines" Margin="0,0,0,10" IsChecked="{Binding IgnoreBlankLines, ElementName=self}"/>

		<UniformGrid Grid.Row="2" HorizontalAlignment="Right">
			<Button Click="OkClick" IsDefault="True" Content="Ok"/>
			<Button IsCancel="True" Content="Cancel"/>
		</UniformGrid>
	</StackPanel>
</Window>

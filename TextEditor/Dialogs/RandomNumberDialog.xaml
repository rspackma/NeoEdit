<Window Name="self" x:Class="NeoEdit.TextEditor.Dialogs.RandomNumberDialog" x:ClassModifier="internal"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
	Title="Random number" SizeToContent="WidthAndHeight" FocusManager.FocusedElement="{Binding ElementName=minValue}">

	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="150"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition Height="10"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<Label Grid.Row="0" Grid.Column="0" Content="Minimum:" Target="{Binding ElementName=repeatCount}"/>
		<xctk:IntegerUpDown Grid.Row="0" Grid.Column="1" Name="minValue" Value="{Binding MinValue, ElementName=self}"/>

		<Label Grid.Row="1" Grid.Column="0" Content="Maximum:" Target="{Binding ElementName=maxValue}"/>
		<xctk:IntegerUpDown Grid.Row="1" Grid.Column="1" Name="maxValue" Value="{Binding MaxValue, ElementName=self}"/>

		<UniformGrid Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Right" Columns="2">
			<Button Click="OkClick" IsDefault="True" Content="Ok" Padding="10,1"/>
			<Button IsCancel="True" Content="Cancel" Padding="10,1"/>
		</UniformGrid>
	</Grid>
</Window>

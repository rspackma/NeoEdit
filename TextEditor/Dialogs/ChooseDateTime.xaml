<Window Name="self" x:Class="NeoEdit.TextEditor.Dialogs.ChooseDateTime"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
	Title="Select Date/Time" SizeToContent="WidthAndHeight" FocusManager.FocusedElement="{Binding ElementName=maxSels}">

	<StackPanel Margin="10,5">
		<xctk:DateTimePicker Value="{Binding Value, ElementName=self}" Width="400" TextAlignment="Left"/>

		<UniformGrid Grid.Row="2" HorizontalAlignment="Right">
			<Button Click="OkClick" IsDefault="True" Content="Ok"/>
			<Button IsCancel="True" Content="Cancel"/>
		</UniformGrid>
	</StackPanel>
</Window>

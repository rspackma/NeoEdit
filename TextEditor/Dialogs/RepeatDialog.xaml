<Window Name="self" x:Class="NeoEdit.TextEditor.Dialogs.RepeatDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
	Title="Repeat selections" SizeToContent="WidthAndHeight" x:ClassModifier="internal" FocusManager.FocusedElement="{Binding ElementName=repeatCount}">

	<Grid Margin="10,5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<Label Grid.Row="0" Grid.Column="0" Content="Repeat count:" Target="{Binding ElementName=repeatCount}"/>
		<xctk:IntegerUpDown Grid.Row="0" Grid.Column="1" Name="repeatCount" Width="100" Value="{Binding RepeatCount, ElementName=self}" Minimum="1"/>

		<CheckBox Grid.Row="1" Grid.ColumnSpan="2" Content="_Select All" IsChecked="{Binding SelectAll, ElementName=self}"/>

		<UniformGrid Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Right">
			<Button Click="OkClick" IsDefault="True" Content="Ok"/>
			<Button IsCancel="True" Content="Cancel"/>
		</UniformGrid>
	</Grid>
</Window>

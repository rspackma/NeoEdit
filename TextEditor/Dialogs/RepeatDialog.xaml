<Window Name="self" x:Class="NeoEdit.TextEditor.Dialogs.RepeatDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
	Title="Repeat selections" SizeToContent="WidthAndHeight" FocusManager.FocusedElement="{Binding ElementName=repeatCount}">

	<StackPanel Margin="10,5">
		<Label Content="Repeat how many times:" Target="{Binding ElementName=repeatCount}"/>
		<xctk:IntegerUpDown Name="repeatCount" Margin="0,0,0,10" Width="500" Value="{Binding RepeatCount, ElementName=self}" Minimum="1"/>

		<UniformGrid Grid.Row="2" HorizontalAlignment="Right">
			<Button Click="OkClick" IsDefault="True" Content="Ok"/>
			<Button IsCancel="True" Content="Cancel"/>
		</UniformGrid>
	</StackPanel>
</Window>

<Window Name="self" x:Class="NeoEdit.TextEditor.TextEditorTabs"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiCommon="clr-namespace:NeoEdit.GUI.Common;assembly=GUI"
	xmlns:textEditor="clr-namespace:NeoEdit.TextEditor"
	Width="800" Height="600" Visibility="Visible" WindowState="Maximized">

	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Menu.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Window.Resources>

	<Window.Title>
		<MultiBinding StringFormat="{}{0} - NeoEdit Text Editor">
			<Binding Path="Active.FileName" ElementName="self"/>
		</MultiBinding>
	</Window.Title>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<StaticResource ResourceKey="TextEditorMenu"/>

		<textEditor:Tabs Grid.Row="1" Grid.Column="0" x:Name="tabs" GetLabel="GetLabel" VerticalAlignment="Stretch"
			Items="{Binding TextEditors, ElementName=self, Mode=TwoWay}"
			Selected="{Binding Selected, ElementName=self, Mode=TwoWay}"
			Active="{Binding Active, ElementName=self, Mode=TwoWay}"
			View="{Binding View, ElementName=self, Mode=TwoWay}"
		/>
	</Grid>

</Window>

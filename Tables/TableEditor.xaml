<tables:TabsControl x:Name="self" x:Class="NeoEdit.Tables.TableEditor"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiControls="clr-namespace:NeoEdit.GUI.Controls;assembly=NeoEdit.GUI"
	xmlns:tables="clr-namespace:NeoEdit.Tables">

	<DataGrid Name="dataGrid"
		ItemsSource="{Binding Table.Rows, ElementName=self}"
		AutoGenerateColumns="False"
		CanUserResizeRows="False"
		CanUserAddRows="False"
		RowHeaderWidth="0" 
		HorizontalGridLinesBrush="LightGray" 
		VerticalGridLinesBrush="LightGray" 
		SelectionUnit="Cell" 
		CanUserSortColumns="False" 
		IsSynchronizedWithCurrentItem="True" 
		tables:DataGridColumnsBinder.Columns="{Binding Table.Headers, ElementName=self}"
		CellEditEnding="CellEditEnding"
		PreviewKeyDown="DataGridPreviewKeyDown"
		SelectedCellsChanged="DataGridSelectedCellsChanged">

		<!--ColumnReordered="ColumnReorderedEvent" -->
		<DataGrid.ColumnHeaderStyle>
			<Style TargetType="DataGridColumnHeader">
				<Setter Property="HorizontalContentAlignment" Value="Stretch"/>
				<!--<EventSetter Event="Click" Handler="ColumnHeaderClick" />-->
			</Style>
		</DataGrid.ColumnHeaderStyle>
	</DataGrid>

</tables:TabsControl>

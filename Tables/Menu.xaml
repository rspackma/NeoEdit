<Menu Name="self" x:Class="NeoEdit.Tables.TablesMenu"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiControls="clr-namespace:NeoEdit.GUI.Controls;assembly=NeoEdit.GUI"
	xmlns:tables="clr-namespace:NeoEdit.Tables">

	<MenuItem Header="_File">
		<tables:TablesMenuItem Header="_New" CommandEnum="File_New"/>
		<tables:TablesMenuItem Header="_Save" CommandEnum="File_Save"/>
		<tables:TablesMenuItem Header="Save _As" CommandEnum="File_SaveAs"/>
		<tables:TablesMenuItem Header="_Close" CommandEnum="File_Close"/>
		<Separator/>
		<tables:TablesMenuItem Header="_Exit" CommandEnum="File_Exit"/>
	</MenuItem>
	<MenuItem Header="_View">
		<MenuItem Header="_Tiles" IsCheckable="True" IsChecked="{Binding Parent.Tiles, ElementName=self}"/>
	</MenuItem>
	<guiControls:WindowMenu/>
	<guiControls:HelpMenu/>

</Menu>
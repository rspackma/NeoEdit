<TextBox Name="self" x:Class="NeoEdit.BinaryEditor.DisplayValue"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiCommon="clr-namespace:NeoEdit.GUI.Common;assembly=NeoEdit.GUI"
	xmlns:binaryEditorConverters="clr-namespace:NeoEdit.BinaryEditor.Converters"
	Padding="0" BorderThickness="0" HorizontalAlignment="Right">

	<TextBox.Background>
		<MultiBinding Converter="{guiCommon:ExpressionConverter}" ConverterParameter="[0] ti== [1] ? 'LightBlue' : 'Transparent'">
			<Binding Path="Text" ElementName="self"/>
			<Binding Path="BinaryEditor.FoundText" ElementName="self"/>
		</MultiBinding>
	</TextBox.Background>

	<TextBox.Text>
		<MultiBinding Converter="{binaryEditorConverters:DisplayValueConverter}" Mode="OneWay">
			<Binding Path="BinaryEditor.Data" ElementName="self"/>
			<Binding Path="BinaryEditor.SelStart" ElementName="self"/>
			<Binding Path="BinaryEditor.SelEnd" ElementName="self"/>
			<Binding Path="BinaryEditor.ChangeCount" ElementName="self"/>
			<Binding Path="Type" ElementName="self"/>
		</MultiBinding>
	</TextBox.Text>
</TextBox>

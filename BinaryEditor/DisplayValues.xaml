<StackPanel Name="self" x:Class="NeoEdit.BinaryEditor.DisplayValues"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiCommon="clr-namespace:NeoEdit.GUI.Common;assembly=GUI"
	xmlns:binaryEditor="clr-namespace:NeoEdit.BinaryEditor"
	Background="LightGray">

	<StackPanel.Style>
		<Style>
			<Style.Resources>
				<Style TargetType="Label">
					<Setter Property="Padding" Value="0,-2,0,0"/>
				</Style>
				<Style TargetType="binaryEditor:DisplayValue">
					<Setter Property="BinaryEditor" Value="{Binding BinaryEditor, ElementName=self}"/>
				</Style>
				<Style TargetType="binaryEditor:DisplayString">
					<Setter Property="BinaryEditor" Value="{Binding BinaryEditor, ElementName=self}"/>
				</Style>
				<Style TargetType="CheckBox">
					<Setter Property="Focusable" Value="False"/>
					<Setter Property="Margin" Value="0,0,5,0"/>
				</Style>
			</Style.Resources>
		</Style>
	</StackPanel.Style>

	<StackPanel Orientation="Horizontal" >
		<Label Content="Show:" Margin="0,0,5,0" VerticalAlignment="Center"/>
		<CheckBox Content="Little Endian" IsChecked="{Binding ShowLE, ElementName=self}" VerticalAlignment="Center"/>
		<CheckBox Content="Big Endian" IsChecked="{Binding ShowBE, ElementName=self}" VerticalAlignment="Center"/>
		<CheckBox Content="Ints" IsChecked="{Binding ShowInt, ElementName=self}" VerticalAlignment="Center"/>
		<CheckBox Content="Floats" IsChecked="{Binding ShowFloat, ElementName=self}" VerticalAlignment="Center"/>
		<CheckBox Content="Strings" IsChecked="{Binding ShowStr, ElementName=self}" VerticalAlignment="Center"/>
		<Button Content="Encodings" Click="ChooseEncodings" VerticalAlignment="Center"/>
	</StackPanel>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="30"/>
			<ColumnDefinition Width="45"/>
			<ColumnDefinition Width="75"/>
			<ColumnDefinition Width="135"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<!--UnsignedLE-->
			<RowDefinition>
				<RowDefinition.Height>
					<MultiBinding Converter="{guiCommon:ExpressionConverter}">
						<Binding Path="ShowLE" ElementName="self"/>
						<Binding Path="ShowInt" ElementName="self"/>
					</MultiBinding>
				</RowDefinition.Height>
			</RowDefinition>
			<!--SignedLE-->
			<RowDefinition>
				<RowDefinition.Height>
					<MultiBinding Converter="{guiCommon:ExpressionConverter}">
						<Binding Path="ShowLE" ElementName="self"/>
						<Binding Path="ShowInt" ElementName="self"/>
					</MultiBinding>
				</RowDefinition.Height>
			</RowDefinition>
			<!--UnsignedBE-->
			<RowDefinition>
				<RowDefinition.Height>
					<MultiBinding Converter="{guiCommon:ExpressionConverter}">
						<Binding Path="ShowBE" ElementName="self"/>
						<Binding Path="ShowInt" ElementName="self"/>
					</MultiBinding>
				</RowDefinition.Height>
			</RowDefinition>
			<!--SignedBE-->
			<RowDefinition>
				<RowDefinition.Height>
					<MultiBinding Converter="{guiCommon:ExpressionConverter}">
						<Binding Path="ShowBE" ElementName="self"/>
						<Binding Path="ShowInt" ElementName="self"/>
					</MultiBinding>
				</RowDefinition.Height>
			</RowDefinition>
		</Grid.RowDefinitions>

		<Label Grid.Row="0" Grid.Column="0" Content="UnsignedLE:"/>
		<binaryEditor:DisplayValue Grid.Row="0" Grid.Column="1" Type="UInt8LE"/>
		<binaryEditor:DisplayValue Grid.Row="0" Grid.Column="2" Type="UInt16LE"/>
		<binaryEditor:DisplayValue Grid.Row="0" Grid.Column="3" Type="UInt32LE"/>
		<binaryEditor:DisplayValue Grid.Row="0" Grid.Column="4" Type="UInt64LE"/>

		<Label Grid.Row="1" Grid.Column="0" Content="SignedLE:"/>
		<binaryEditor:DisplayValue Grid.Row="1" Grid.Column="1" Type="Int8LE"/>
		<binaryEditor:DisplayValue Grid.Row="1" Grid.Column="2" Type="Int16LE"/>
		<binaryEditor:DisplayValue Grid.Row="1" Grid.Column="3" Type="Int32LE"/>
		<binaryEditor:DisplayValue Grid.Row="1" Grid.Column="4" Type="Int64LE"/>

		<Label Grid.Row="2" Grid.Column="0" Content="UnsignedBE:"/>
		<binaryEditor:DisplayValue Grid.Row="2" Grid.Column="1" Type="UInt8BE"/>
		<binaryEditor:DisplayValue Grid.Row="2" Grid.Column="2" Type="UInt16BE"/>
		<binaryEditor:DisplayValue Grid.Row="2" Grid.Column="3" Type="UInt32BE"/>
		<binaryEditor:DisplayValue Grid.Row="2" Grid.Column="4" Type="UInt64BE"/>

		<Label Grid.Row="3" Grid.Column="0" Content="SignedBE:"/>
		<binaryEditor:DisplayValue Grid.Row="3" Grid.Column="1" Type="Int8BE"/>
		<binaryEditor:DisplayValue Grid.Row="3" Grid.Column="2" Type="Int16BE"/>
		<binaryEditor:DisplayValue Grid.Row="3" Grid.Column="3" Type="Int32BE"/>
		<binaryEditor:DisplayValue Grid.Row="3" Grid.Column="4" Type="Int64BE"/>
	</Grid>

	<StackPanel Orientation="Horizontal" Visibility="{Binding ShowFloat, ElementName=self, Converter={guiCommon:ExpressionConverter}}">
		<Label Content="Float:"/>
		<binaryEditor:DisplayValue Type="Single"/>
		<binaryEditor:DisplayValue Type="Double"/>
	</StackPanel>

	<Grid Name="strings" Visibility="{Binding ShowStr, ElementName=self, Converter={guiCommon:ExpressionConverter}}">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
	</Grid>

</StackPanel>

<Menu Name="self" x:Class="NeoEdit.BinaryEditor.BinaryEditMenu"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiCommon="clr-namespace:NeoEdit.GUI.Common;assembly=GUI"
    xmlns:binaryEditor="clr-namespace:NeoEdit.BinaryEditor">

	<MenuItem Header="_File">
		<binaryEditor:BinaryEditMenuItem Header="_New" CommandEnum="File_New"/>
		<binaryEditor:BinaryEditMenuItem Header="_Open" CommandEnum="File_Open"/>
		<binaryEditor:BinaryEditMenuItem Header="Open _Dump" CommandEnum="File_OpenDump"/>
		<binaryEditor:BinaryEditMenuItem Header="Open Copied/Cut Files" CommandEnum="File_OpenCopiedCutFiles"/>
		<binaryEditor:BinaryEditMenuItem Header="_Save" CommandEnum="File_Save"/>
		<binaryEditor:BinaryEditMenuItem Header="Save _As" CommandEnum="File_SaveAs"/>
		<binaryEditor:BinaryEditMenuItem Header="_Close" CommandEnum="File_Close"/>
		<Separator/>
		<binaryEditor:BinaryEditMenuItem Header="Copy _Path" CommandEnum="File_CopyPath"/>
		<binaryEditor:BinaryEditMenuItem Header="Copy Name" CommandEnum="File_CopyName"/>
		<Separator/>
		<binaryEditor:BinaryEditMenuItem Header="_Encoding" CommandEnum="File_Encoding"/>
		<binaryEditor:BinaryEditMenuItem Header="Text Editor" CommandEnum="File_TextEditor"/>
		<Separator/>
		<binaryEditor:BinaryEditMenuItem Header="E_xit" CommandEnum="File_Exit"/>
	</MenuItem>
	<MenuItem Header="_Edit">
		<binaryEditor:BinaryEditMenuItem Header="_Undo" CommandEnum="Edit_Undo"/>
		<binaryEditor:BinaryEditMenuItem Header="_Redo" CommandEnum="Edit_Redo"/>
		<Separator/>
		<binaryEditor:BinaryEditMenuItem Header="Cu_t" CommandEnum="Edit_Cut"/>
		<binaryEditor:BinaryEditMenuItem Header="_Copy" CommandEnum="Edit_Copy"/>
		<binaryEditor:BinaryEditMenuItem Header="_Paste" CommandEnum="Edit_Paste"/>
		<binaryEditor:BinaryEditMenuItem Header="_Show Clipboard" CommandEnum="Edit_ShowClipboard"/>
		<Separator/>
		<binaryEditor:BinaryEditMenuItem Header="_Find" CommandEnum="Edit_Find"/>
		<binaryEditor:BinaryEditMenuItem Header="Find _Next" CommandEnum="Edit_FindNext"/>
		<binaryEditor:BinaryEditMenuItem Header="Find _Prev" CommandEnum="Edit_FindPrev"/>
		<binaryEditor:BinaryEditMenuItem Header="_Goto" CommandEnum="Edit_Goto"/>
		<Separator/>
		<binaryEditor:BinaryEditMenuItem Header="_Insert" CommandEnum="Edit_Insert" IsChecked="{Binding Parent.Active.Insert, ElementName=self}"/>
	</MenuItem>
	<MenuItem Header="_View">
		<binaryEditor:BinaryEditMenuItem Header="_Values" CommandEnum="View_Values" IsChecked="{Binding Parent.Active.ShowValues, ElementName=self}"/>
		<binaryEditor:BinaryEditMenuItem Header="_Refresh" CommandEnum="View_Refresh"/>
		<binaryEditor:BinaryEditMenuItem Header="_Tiles" CommandEnum="View_Tiles" IsChecked="{Binding Parent.View, ElementName=self, Converter={guiCommon:ExpressionConverter}, ConverterParameter='[0]==\'Tiles\''}"/>
	</MenuItem>
	<MenuItem Header="_Data">
		<MenuItem Header="C_hecksum">
			<binaryEditor:BinaryEditMenuItem Header="_MD5" CommandEnum="Data_Checksum_MD5"/>
			<binaryEditor:BinaryEditMenuItem Header="SHA_1" CommandEnum="Data_Checksum_SHA1"/>
			<binaryEditor:BinaryEditMenuItem Header="SHA_256" CommandEnum="Data_Checksum_SHA256"/>
		</MenuItem>
		<MenuItem Header="_Compress">
			<binaryEditor:BinaryEditMenuItem Header="_GZip" CommandEnum="Data_Compress_GZip"/>
			<binaryEditor:BinaryEditMenuItem Header="_Deflate" CommandEnum="Data_Compress_Deflate"/>
		</MenuItem>
		<MenuItem Header="_Decompress">
			<binaryEditor:BinaryEditMenuItem Header="_GZip" CommandEnum="Data_Decompress_GZip"/>
			<binaryEditor:BinaryEditMenuItem Header="_Inflate" CommandEnum="Data_Decompress_Inflate"/>
		</MenuItem>
		<MenuItem Header="_Encrypt">
			<binaryEditor:BinaryEditMenuItem Header="_AES" CommandEnum="Data_Encrypt_AES"/>
			<binaryEditor:BinaryEditMenuItem Header="_DES" CommandEnum="Data_Encrypt_DES"/>
			<binaryEditor:BinaryEditMenuItem Header="_3DES" CommandEnum="Data_Encrypt_3DES"/>
			<binaryEditor:BinaryEditMenuItem Header="_RSA" CommandEnum="Data_Encrypt_RSA"/>
			<binaryEditor:BinaryEditMenuItem Header="RSA/AES" CommandEnum="Data_Encrypt_RSAAES"/>
		</MenuItem>
		<MenuItem Header="Dec_rypt">
			<binaryEditor:BinaryEditMenuItem Header="_AES" CommandEnum="Data_Decrypt_AES"/>
			<binaryEditor:BinaryEditMenuItem Header="_DES" CommandEnum="Data_Decrypt_DES"/>
			<binaryEditor:BinaryEditMenuItem Header="_3DES" CommandEnum="Data_Decrypt_3DES"/>
			<binaryEditor:BinaryEditMenuItem Header="_RSA" CommandEnum="Data_Decrypt_RSA"/>
			<binaryEditor:BinaryEditMenuItem Header="RSA/AES" CommandEnum="Data_Decrypt_RSAAES"/>
		</MenuItem>
		<MenuItem Header="_Sign">
			<binaryEditor:BinaryEditMenuItem Header="_RSA" CommandEnum="Data_Sign_RSA"/>
			<binaryEditor:BinaryEditMenuItem Header="_DSA" CommandEnum="Data_Sign_DSA"/>
		</MenuItem>
		<MenuItem Header="_Verify">
			<binaryEditor:BinaryEditMenuItem Header="_RSA" CommandEnum="Data_Verify_RSA"/>
			<binaryEditor:BinaryEditMenuItem Header="_DSA" CommandEnum="Data_Verify_DSA"/>
		</MenuItem>
		<binaryEditor:BinaryEditMenuItem Header="_Fill" CommandEnum="Data_Fill"/>
	</MenuItem>
	<guiCommon:WindowMenu ParentWindow="{Binding Parent, ElementName=self}"/>
	<guiCommon:HelpMenu/>

</Menu>
<Window Name="self" x:Class="NeoEdit.BinaryEditor.BinaryEditorTabs"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:binaryEditor="clr-namespace:NeoEdit.BinaryEditor"
	Width="800" Height="600" Visibility="Visible" WindowState="Maximized">

	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Menu.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Window.Resources>

	<Window.Title>
		<MultiBinding StringFormat="{}{0}{1} - NeoEdit Binary Editor">
			<Binding Path="FileTitle" ElementName="active"/>
			<Binding Path="FileName" ElementName="active"/>
		</MultiBinding>
	</Window.Title>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<StaticResource ResourceKey="BinaryEditorMenu"/>

		<binaryEditor:BinaryEditor x:Name="active" Grid.Row="1"/>
	</Grid>

</Window>

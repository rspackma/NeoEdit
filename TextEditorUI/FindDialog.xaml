<Window Name="self" x:Class="NeoEdit.TextEditorUI.FindDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:NeoEdit.Common"
	Title="Find" SizeToContent="WidthAndHeight" FocusManager.FocusedElement="{Binding ElementName=findText}">

	<StackPanel Margin="10,5">
		<StackPanel.Style>
			<Style>
				<Style.Resources>
					<Style TargetType="Label">
						<Setter Property="Padding" Value="0,0,10,0"/>
					</Style>
					<Style TargetType="CheckBox">
						<Setter Property="Margin" Value="0,0,10,10"/>
						<Setter Property="Focusable" Value="False"/>
					</Style>
					<Style TargetType="Button">
						<Setter Property="Focusable" Value="False"/>
					</Style>
				</Style.Resources>
			</Style>
		</StackPanel.Style>
		
		<Label Content="Search for:"/>
		<TextBox Name="findText" Margin="0,0,0,10" Width="500"/>

		<StackPanel>
			<CheckBox Name="wholeWords" Content="_Whole words only"/>
			<CheckBox Name="matchCase" Content="Match _case"/>
			<CheckBox Name="regularExpression" Content="Regular _expression"/>
			<CheckBox Name="selectionOnly" Content="_Selection only"/>
		</StackPanel>
		
		<UniformGrid Grid.Row="2" HorizontalAlignment="Right">
			<Button Click="OkClick" IsDefault="True" Content="Ok"/>
			<Button IsCancel="True" Content="Cancel"/>
		</UniformGrid>
	</StackPanel>
</Window>

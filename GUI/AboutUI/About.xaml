<Window x:Name="self" x:Class="NeoEdit.GUI.AboutUI.About"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="About NeoEdit" SizeToContent="WidthAndHeight">

	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<Image Margin="10" Source="/GUI;component/AboutUI/NeoEdit.png" Stretch="None">
			<Image.Effect>
				<DropShadowEffect BlurRadius="15" ShadowDepth="10"/>
			</Image.Effect>
		</Image>
		<Label Grid.Row="1">
			<Label.Content>
				<TextBlock>
					<TextBlock.Text>
						<MultiBinding StringFormat="{}{0} {1}&#x0a;{2}">
							<Binding ElementName="self" Path="Product"/>
							<Binding ElementName="self" Path="Version"/>
							<Binding ElementName="self" Path="Copyright"/>
						</MultiBinding>
					</TextBlock.Text>
				</TextBlock>
			</Label.Content>
		</Label>

		<Button Grid.Row="2" Width="50" HorizontalAlignment="Right" IsDefault="True" IsCancel="True" Content="Ok"/>
	</Grid>

</Window>

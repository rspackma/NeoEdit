<guiControls:ModalDialog x:Name="self" x:Class="NeoEdit.GUI.Dialogs.ProgressDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiControls="clr-namespace:NeoEdit.GUI.Controls"
	xmlns:guiConverters="clr-namespace:NeoEdit.GUI.Converters"
	Title="Progress..." SizeToContent="WidthAndHeight" FocusManager.FocusedElement="{Binding ElementName=cancel}">

	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="10"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Text, ElementName=self}" HorizontalAlignment="Center"/>

		<ProgressBar Grid.Row="1" Grid.Column="0" Height="10" MinWidth="500" Visibility="{Binding Percent, ElementName=self, Converter={guiConverters:NEExpressionConverter}, ConverterParameter='[0] != null'}" Value="{Binding Percent, ElementName=self}"/>

		<UniformGrid Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" Rows="1">
			<Button Name="cancel" Content="Cancel" Padding="10,1" Click="OnCancel"/>
		</UniformGrid>
	</Grid>

</guiControls:ModalDialog>

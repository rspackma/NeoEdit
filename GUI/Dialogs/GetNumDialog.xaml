<common:TransparentWindow x:Name="self" x:Class="NeoEdit.GUI.Dialogs.GetNumDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:NeoEdit.GUI.Common"
	Title="GetNum" SizeToContent="WidthAndHeight" FocusManager.FocusedElement="{Binding ElementName=value}">

	<StackPanel Margin="10,5">
		<StackPanel.Style>
			<Style>
				<Style.Resources>
					<Style TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
						<Setter Property="Padding" Value="0,0,10,0"/>
					</Style>
					<Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
						<Setter Property="Focusable" Value="False"/>
						<Setter Property="Margin" Value="5,0,0,0"/>
					</Style>
					<Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
						<Setter Property="Margin" Value="0,0,0,10"/>
					</Style>
				</Style.Resources>
			</Style>
		</StackPanel.Style>

		<Label Content="{Binding Text, ElementName=self, TargetNullValue=Number:}"/>
		<TextBox Name="value" Width="300" Text="{Binding Value, ElementName=self, UpdateSourceTrigger=PropertyChanged}"/>

		<UniformGrid HorizontalAlignment="Right" Columns="2">
			<Button Name="okClick" IsDefault="True" Content="Ok"/>
			<Button IsCancel="True" Content="Cancel"/>
		</UniformGrid>
	</StackPanel>
</common:TransparentWindow>

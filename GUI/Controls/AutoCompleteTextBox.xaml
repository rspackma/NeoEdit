<ComboBox Name="self" x:Class="NeoEdit.GUI.Controls.AutoCompleteTextBox"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	IsEditable="True" IsTextSearchEnabled="False">

	<ComboBox.Template>
		<ControlTemplate TargetType="ComboBox">
			<Grid>
				<TextBox x:Name="PART_EditableTextBox" TextChanged="textBox_TextChanged" AcceptsTab="True"/>
				<Popup IsOpen="{TemplateBinding IsDropDownOpen}" Focusable="False">
					<ScrollViewer MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}" Margin="1" Padding="2" Background="{TemplateBinding Background}">
						<StackPanel IsItemsHost="True"/>
					</ScrollViewer>
				</Popup>
			</Grid>
		</ControlTemplate>
	</ComboBox.Template>

</ComboBox>

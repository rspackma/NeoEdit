<guiControls:ModalDialog Name="self" x:Class="NeoEdit.Tools.Dialogs.NSRLTool.NSRLToolDialog" x:ClassModifier="internal"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiControls="clr-namespace:NeoEdit.GUI.Controls;assembly=NeoEdit.GUI"
	SizeToContent="WidthAndHeight" Visibility="Visible"
	Title="NSRL Tool">

	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="150"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition Height="10"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<Button Grid.Row="0" Content="_Create Index" Click="CreateIndex"/>
		<Button Grid.Row="1" Content="Lookup _Values" Click="LookupValues"/>
		<Button Grid.Row="2" Content="Lookup _Files" Click="LookupFiles"/>

		<Button Grid.Row="4" Click="OkClick" IsDefault="True" IsCancel="True" Content="Ok" Padding="10,1"/>
	</Grid>

</guiControls:ModalDialog>

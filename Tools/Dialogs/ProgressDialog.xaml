<guiControls:ModalDialog Name="self" x:Class="NeoEdit.Tools.Dialogs.ProgressDialog" x:ClassModifier="internal"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiControls="clr-namespace:NeoEdit.GUI.Controls;assembly=NeoEdit.GUI"
	SizeToContent="WidthAndHeight" Visibility="Visible"
	Title="Progress">

	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="300"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="10"/>
			<RowDefinition Height="10"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding DialogTitle, ElementName=self}" HorizontalAlignment="Center"/>
		<ProgressBar Grid.Row="1" Grid.Column="0" Value="{Binding Progress, ElementName=self}"/>

		<Button Grid.Row="3" Grid.Column="0" Click="CancelClick" IsCancel="True" Content="_Cancel" Width="60"/>
	</Grid>
</guiControls:ModalDialog>

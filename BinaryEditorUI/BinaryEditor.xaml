<Window Name="self" x:Class="NeoEdit.BinaryEditorUI.BinaryEditor"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:binaryEditorUI="clr-namespace:NeoEdit.BinaryEditorUI"
    xmlns:common="clr-namespace:NeoEdit.Common"
	Title="Binary Editor" Height="400" Width="400">

	<Window.Resources>
		<BooleanToVisibilityConverter x:Key="BoolToVis"/>
		<common:UICommand x:Key="Edit_Find" Key="F" Modifiers="Control" Executed="CommandCallback"/>
		<common:UICommand x:Key="View_Values" Key="V" Modifiers="Control" Executed="CommandCallback"/>
	</Window.Resources>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Menu Grid.ColumnSpan="2">
			<MenuItem Header="_Edit">
				<MenuItem Header="_Find" Command="{StaticResource Edit_Find}" InputGestureText="Ctrl+F"/>
			</MenuItem>
			<MenuItem Header="_View">
				<MenuItem Header="_Values" Command="{StaticResource View_Values}" InputGestureText="Ctrl+V" IsChecked="{Binding ShowValues, ElementName=self}"/>
			</MenuItem>
		</Menu>
		<binaryEditorUI:BinaryCanvas x:Name="canvas" Grid.Row="1"
			Data="{Binding Data, ElementName=self}"
			SelStart="{Binding SelStart, ElementName=self, Mode=TwoWay}"
			SelEnd="{Binding SelEnd, ElementName=self, Mode=TwoWay}"
			xScrollSmallChange="{Binding SmallChange, ElementName=xScroll, Mode=TwoWay}"
			xScrollLargeChange="{Binding LargeChange, ElementName=xScroll, Mode=TwoWay}"
			xScrollMaximum="{Binding Maximum, ElementName=xScroll, Mode=TwoWay}"
			xScrollValue="{Binding Value, ElementName=xScroll, Mode=TwoWay}"
			yScrollSmallChange="{Binding SmallChange, ElementName=yScroll, Mode=TwoWay}"
			yScrollLargeChange="{Binding LargeChange, ElementName=yScroll, Mode=TwoWay}"
			yScrollMaximum="{Binding Maximum, ElementName=yScroll, Mode=TwoWay}"
			yScrollValue="{Binding Value, ElementName=yScroll, Mode=TwoWay}"
		/>
		<ScrollBar Name="yScroll" Maximum="10" Grid.Row="1" Grid.Column="1" ViewportSize="{Binding ActualWidth, ElementName=canvas}" PreviewMouseWheel="ScrollBar_PreviewMouseWheel"/>
		<ScrollBar Name="xScroll" Grid.Row="2" Orientation="Horizontal" ViewportSize="{Binding ActualHeight, ElementName=canvas}"/>
		<binaryEditorUI:DisplayValues Grid.Row="3" Grid.ColumnSpan="2"
			Visibility="{Binding ShowValues, ElementName=self, Converter={StaticResource BoolToVis}}"
			Data="{Binding Data, ElementName=self}"
			SelStart="{Binding SelStart, ElementName=self}"
			SelEnd="{Binding SelEnd, ElementName=self}"
			FoundText="{Binding FoundText, ElementName=self}"
		/>
	</Grid>

</Window>

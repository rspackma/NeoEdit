<Window Name="self" x:Class="NeoEdit.BinaryEditorUI.BinaryEditor"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:NeoEdit.Common"
    xmlns:binaryEditorUI="clr-namespace:NeoEdit.BinaryEditorUI"
	Title="NeoEdit Binary Editor" Height="400" Width="400" WindowState="Maximized">

	<Window.Resources>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Edit_Undo}" Header="_Undo" Key="Z" Modifiers="Control" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Edit_Cut}" Header="Cu_t" Key="X" Modifiers="Control" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Edit_Copy}" Header="_Copy" Key="C" Modifiers="Control" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Edit_Paste}" Header="_Paste" Key="V" Modifiers="Control" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Edit_Find}" Header="_Find" Key="F" Modifiers="Control" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Edit_FindNext}" Header="Find _Next" Key="F3" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Edit_FindPrev}" Header="Find _Previous" Key="F3" Modifiers="Shift" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Edit_Insert}" Header="_Insert" Key="Insert" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.View_Values}" Header="_Values" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Checksum_MD5}" Header="_MD5" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Checksum_SHA1}" Header="SHA_1" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Checksum_SHA256}" Header="SHA_256" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Compress_GZip}" Header="_GZip" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Decompress_GZip}" Header="_GZip" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Compress_Deflate}" Header="_Deflate" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Decompress_Inflate}" Header="_Inflate" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Encrypt_AES}" Header="_AES" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Decrypt_AES}" Header="_AES" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Encrypt_DES}" Header="_DES" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Decrypt_DES}" Header="_DES" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Encrypt_DES3}" Header="_3DES" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Decrypt_DES3}" Header="_3DES" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Encrypt_RSA}" Header="_RSA" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Decrypt_RSA}" Header="_RSA" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Encrypt_RSAAES}" Header="RSA/AES" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Decrypt_RSAAES}" Header="RSA/AES" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Sign_RSA}" Header="_RSA" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Verify_RSA}" Header="_RSA" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Sign_DSA}" Header="_DSA" Run="CommandRun" CanRun="CommandCanRun"/>
		<common:UICommand x:Key="{x:Static Member=binaryEditorUI:BinaryEditor.Verify_DSA}" Header="_DSA" Run="CommandRun" CanRun="CommandCanRun"/>
	</Window.Resources>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Menu Grid.ColumnSpan="2">
			<MenuItem Header="_Edit">
				<MenuItem Command="{StaticResource Edit_Cut}"/>
				<MenuItem Command="{StaticResource Edit_Cut}"/>
				<MenuItem Command="{StaticResource Edit_Copy}"/>
				<MenuItem Command="{StaticResource Edit_Paste}"/>
				<Separator/>
				<MenuItem Command="{StaticResource Edit_Find}"/>
				<MenuItem Command="{StaticResource Edit_FindNext}"/>
				<MenuItem Command="{StaticResource Edit_FindPrev}"/>
				<Separator/>
				<MenuItem Command="{StaticResource Edit_Insert}" IsChecked="{Binding Insert, ElementName=self}"/>
				<MenuItem Header="_Encode" Click="EncodeClick">
					<MenuItem Header="Auto"/>
					<MenuItem Header="UTF8"/>
					<MenuItem Header="UTF7"/>
					<MenuItem Header="UTF16LE"/>
					<MenuItem Header="UTF16BE"/>
					<MenuItem Header="UTF32LE"/>
					<MenuItem Header="UTF32BE"/>
					<MenuItem Header="Base64"/>
				</MenuItem>
				<MenuItem Header="Input Encoding" Click="InputEncodingClick">
					<MenuItem Header="UTF7" IsChecked="{Binding InputCoderType, ElementName=self, Converter={common:ExpressionConverter}, ConverterParameter=#5B#0#5D##3D##3D##27#UTF7#27#}"/>
					<MenuItem Header="UTF8" IsChecked="{Binding InputCoderType, ElementName=self, Converter={common:ExpressionConverter}, ConverterParameter=#5B#0#5D##3D##3D##27#UTF8#27#}"/>
					<MenuItem Header="UTF16LE" IsChecked="{Binding InputCoderType, ElementName=self, Converter={common:ExpressionConverter}, ConverterParameter=#5B#0#5D##3D##3D##27#UTF16LE#27#}"/>
					<MenuItem Header="UTF16BE" IsChecked="{Binding InputCoderType, ElementName=self, Converter={common:ExpressionConverter}, ConverterParameter=#5B#0#5D##3D##3D##27#UTF16BE#27#}"/>
					<MenuItem Header="UTF32LE" IsChecked="{Binding InputCoderType, ElementName=self, Converter={common:ExpressionConverter}, ConverterParameter=#5B#0#5D##3D##3D##27#UTF32LE#27#}"/>
					<MenuItem Header="UTF32BE" IsChecked="{Binding InputCoderType, ElementName=self, Converter={common:ExpressionConverter}, ConverterParameter=#5B#0#5D##3D##3D##27#UTF32BE#27#}"/>
				</MenuItem>
			</MenuItem>
			<MenuItem Header="_View">
				<MenuItem Command="{StaticResource View_Values}" IsChecked="{Binding ShowValues, ElementName=self}"/>
			</MenuItem>
			<MenuItem Header="_Data">
				<MenuItem Header="C_hecksum">
					<MenuItem Command="{StaticResource Checksum_MD5}"/>
					<MenuItem Command="{StaticResource Checksum_SHA1}"/>
					<MenuItem Command="{StaticResource Checksum_SHA256}"/>
				</MenuItem>
				<MenuItem Header="_Compress">
					<MenuItem Command="{StaticResource Compress_GZip}"/>
					<MenuItem Command="{StaticResource Compress_Deflate}"/>
				</MenuItem>
				<MenuItem Header="_Decompress">
					<MenuItem Command="{StaticResource Decompress_GZip}"/>
					<MenuItem Command="{StaticResource Decompress_Inflate}"/>
				</MenuItem>
				<MenuItem Header="_Encrypt">
					<MenuItem Command="{StaticResource Encrypt_AES}"/>
					<MenuItem Command="{StaticResource Encrypt_DES}"/>
					<MenuItem Command="{StaticResource Encrypt_DES3}"/>
					<MenuItem Command="{StaticResource Encrypt_RSA}"/>
					<MenuItem Command="{StaticResource Encrypt_RSAAES}"/>
				</MenuItem>
				<MenuItem Header="Dec_rypt">
					<MenuItem Command="{StaticResource Decrypt_AES}"/>
					<MenuItem Command="{StaticResource Decrypt_DES}"/>
					<MenuItem Command="{StaticResource Decrypt_DES3}"/>
					<MenuItem Command="{StaticResource Decrypt_RSA}"/>
					<MenuItem Command="{StaticResource Decrypt_RSAAES}"/>
				</MenuItem>
				<MenuItem Header="_Sign">
					<MenuItem Command="{StaticResource Sign_RSA}"/>
					<MenuItem Command="{StaticResource Sign_DSA}"/>
				</MenuItem>
				<MenuItem Header="_Verify">
					<MenuItem Command="{StaticResource Verify_RSA}"/>
					<MenuItem Command="{StaticResource Verify_DSA}"/>
				</MenuItem>
			</MenuItem>
		</Menu>
		<binaryEditorUI:BinaryCanvas x:Name="canvas" Grid.Row="1"
			Data="{Binding Data, ElementName=self, Mode=OneWay}"
			ChangeCount="{Binding ChangeCount, ElementName=self, Mode=OneWay}"
			SelStart="{Binding SelStart, ElementName=self, Mode=OneWayToSource}"
			SelEnd="{Binding SelEnd, ElementName=self, Mode=OneWayToSource}"
			xScrollSmallChange="{Binding SmallChange, ElementName=xScroll, Mode=OneWayToSource}"
			xScrollLargeChange="{Binding LargeChange, ElementName=xScroll, Mode=OneWayToSource}"
			xScrollMaximum="{Binding Maximum, ElementName=xScroll, Mode=OneWayToSource}"
			xScrollValue="{Binding Value, ElementName=xScroll, Mode=TwoWay}"
			yScrollSmallChange="{Binding SmallChange, ElementName=yScroll, Mode=OneWayToSource}"
			yScrollLargeChange="{Binding LargeChange, ElementName=yScroll, Mode=OneWayToSource}"
			yScrollMaximum="{Binding Maximum, ElementName=yScroll, Mode=OneWayToSource}"
			yScrollValue="{Binding Value, ElementName=yScroll, Mode=TwoWay}"
			Insert="{Binding Insert, ElementName=self, Mode=OneWayToSource}"
			InputCoderType="{Binding InputCoderType, ElementName=self, Mode=OneWayToSource}"
			FoundText="{Binding FoundText, ElementName=self, Mode=OneWayToSource}"
		/>
		<ScrollBar Name="yScroll" Maximum="10" Grid.Row="1" Grid.Column="1" ViewportSize="{Binding ActualWidth, ElementName=canvas}"/>
		<ScrollBar Name="xScroll" Grid.Row="2" Orientation="Horizontal" ViewportSize="{Binding ActualHeight, ElementName=canvas}"/>
		<binaryEditorUI:DisplayValues Grid.Row="3" Grid.ColumnSpan="2"
			Visibility="{Binding ShowValues, ElementName=self, Converter={common:ExpressionConverter}}"
			Data="{Binding Data, ElementName=self, Mode=OneWay}"
			ChangeCount="{Binding ChangeCount, ElementName=self, Mode=OneWay}"
			SelStart="{Binding SelStart, ElementName=self, Mode=OneWay}"
			SelEnd="{Binding SelEnd, ElementName=self, Mode=OneWay}"
			FoundText="{Binding FoundText, ElementName=self, Mode=OneWay}"
		/>
	</Grid>

</Window>

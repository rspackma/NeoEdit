<TextBox Name="self" x:Class="NeoEdit.BinaryEditorUI.DisplayValue"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:binaryEditorUIConverters="clr-namespace:NeoEdit.BinaryEditorUI.Converters"
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300"
	Padding="0"
	BorderThickness="0"
	IsReadOnly="{Binding Type, ElementName=self, Converter={binaryEditorUIConverters:IsStrConverter}}">

	<TextBox.Resources>
		<binaryEditorUIConverters:ExpressionConverter x:Key="ExpConv"/>
	</TextBox.Resources>
	
	<TextBox.Background>
		<MultiBinding Converter="{StaticResource ExpConv}" ConverterParameter="[0] =i= [1] ? 'LightBlue' : 'Transparent'">
			<Binding Path="Text" ElementName="self"/>
			<Binding Path="FoundText" ElementName="self"/>
		</MultiBinding>
	</TextBox.Background>
	
	<TextBox.Text>
		<MultiBinding Converter="{binaryEditorUIConverters:DisplayValueConverter}" Mode="OneWay">
			<Binding Path="Data" ElementName="self"/>
			<Binding Path="SelStart" ElementName="self"/>
			<Binding Path="SelEnd" ElementName="self"/>
			<Binding Path="Type" ElementName="self"/>
			<Binding Path="ChangeCount" ElementName="self"/>
		</MultiBinding>
	</TextBox.Text>
</TextBox>

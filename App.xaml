<Application x:Class="NeoEdit.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:NeoEdit.Common"
	StartupUri="TextEditorUI/TextEditor.xaml">

	<Application.Resources>
		<Style TargetType="MenuItem">
			<Setter Property="Header" Value="{Binding RelativeSource={RelativeSource Self}, Converter={common:ExpressionConverter}, ConverterParameter=#5B#0#5D##2E##27#Command#27##2E##27#Header#27#}"/>
			<Setter Property="InputGestureText" Value="{Binding RelativeSource={RelativeSource Self}, Converter={common:ExpressionConverter}, ConverterParameter=#5B#0#5D##2E##27#Command#27##2E##27#InputGestureText#27#}"/>
		</Style>
	</Application.Resources>

</Application>

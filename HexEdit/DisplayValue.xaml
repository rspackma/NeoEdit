<TextBox Name="self" x:Class="NeoEdit.HexEdit.DisplayValue"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiConverters="clr-namespace:NeoEdit.GUI.Converters;assembly=NeoEdit.GUI"
	xmlns:hexEditConverters="clr-namespace:NeoEdit.HexEdit.Converters"
	Padding="0" BorderThickness="0" HorizontalAlignment="Right">

	<TextBox.Background>
		<MultiBinding Converter="{guiConverters:NEExpressionConverter}" ConverterParameter="[0] i== [1] ? &quot;LightBlue&quot; : &quot;Transparent&quot;">
			<Binding Path="Text" ElementName="self"/>
			<Binding Path="HexEditor.FoundText" ElementName="self"/>
		</MultiBinding>
	</TextBox.Background>

	<TextBox.Text>
		<MultiBinding Converter="{hexEditConverters:DisplayValueConverter}" Mode="OneWay">
			<Binding Path="HexEditor.Data" ElementName="self"/>
			<Binding Path="HexEditor.SelStart" ElementName="self"/>
			<Binding Path="HexEditor.SelEnd" ElementName="self"/>
			<Binding Path="HexEditor.ChangeCount" ElementName="self"/>
			<Binding Path="CodePage" ElementName="self"/>
		</MultiBinding>
	</TextBox.Text>
</TextBox>

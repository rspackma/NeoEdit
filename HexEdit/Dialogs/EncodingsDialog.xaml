<guiCommon:ModalDialog Name="self" x:Class="NeoEdit.HexEdit.EncodingsDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiCommon="clr-namespace:NeoEdit.GUI.Common;assembly=NeoEdit.GUI"
	Title="Choose Encodings" SizeToContent="WidthAndHeight" FocusManager.FocusedElement="{Binding ElementName=codePages}">

	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="10"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<ListBox Grid.Row="0" Grid.Column="0" Name="codePages" Width="400" Height="300" ItemsSource="{Binding CodePageItems, ElementName=self}" SelectionMode="Extended"/>

		<UniformGrid Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Rows="1">
			<Button Click="OkClick" IsDefault="True" Content="Ok" Padding="10,1"/>
			<Button IsCancel="True" Content="Cancel" Padding="10,1"/>
		</UniformGrid>
	</Grid>
</guiCommon:ModalDialog>

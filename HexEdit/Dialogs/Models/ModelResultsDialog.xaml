<Window Name="self" x:Class="NeoEdit.HexEdit.Dialogs.Models.ModelResultsDialog" x:ClassModifier="internal"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:models="clr-namespace:NeoEdit.HexEdit.Dialogs.Models"
	Title="Model Extraction Results" SizeToContent="WidthAndHeight" FocusManager.FocusedElement="{Binding ElementName=results}">

	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<models:ModelResultGrid Grid.Row="0" Grid.Column="0" x:Name="results" Width="600" Height="300" Items="{Binding Results, ElementName=self}" SelectionChanged="SelectionChanged"/>

		<UniformGrid Grid.Row="1" Grid.Column="0" Rows="1" HorizontalAlignment="Left">
			<Button Click="ModifyValues" Content="_Modify" Padding="10,1"/>
			<Button Click="RemoveValues" Content="_Remove" Padding="10,1"/>
			<Button Click="CopyValues" Content="_Copy" Padding="10,1"/>
			<Button Click="PasteValues" Content="_Paste" Padding="10,1"/>
		</UniformGrid>
	</Grid>
</Window>

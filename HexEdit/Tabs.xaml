<guiControls:NEWindow Name="self" x:Class="NeoEdit.HexEdit.HexEditTabs"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiControls="clr-namespace:NeoEdit.GUI.Controls;assembly=NeoEdit.GUI"
	xmlns:guiConverters="clr-namespace:NeoEdit.GUI.Converters;assembly=NeoEdit.GUI"
	xmlns:hexEdit="clr-namespace:NeoEdit.HexEdit"
	Width="800" Height="600" Visibility="Visible" WindowState="Maximized">

	<Window.Title>
		<MultiBinding Converter="{guiConverters:NEExpressionConverter}" ConverterParameter="StrFormat('{0}{1} - NeoEdit Hex Editor', [0], [1])">
			<Binding Path="Active.FileTitle" ElementName="self"/>
			<Binding Path="Active.FileName" ElementName="self"/>
		</MultiBinding>
	</Window.Title>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<hexEdit:HexEditMenu x:Name="menu" Parent="{Binding ElementName=self}"/>

		<hexEdit:Tabs Grid.Row="1" Grid.Column="0" x:Name="tabs" TabLabelPath="TabLabel" VerticalAlignment="Stretch"
			Items="{Binding HexEditors, ElementName=self, Mode=TwoWay}"
			TopMost="{Binding Active, ElementName=self, Mode=TwoWay}"
			View="{Binding View, ElementName=self, Mode=TwoWay}"
		/>
	</Grid>

</guiControls:NEWindow>

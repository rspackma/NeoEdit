<Menu Name="self" x:Class="NeoEdit.TextView.TextViewMenu"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiCommon="clr-namespace:NeoEdit.GUI.Common;assembly=NeoEdit.GUI"
	xmlns:textView="clr-namespace:NeoEdit.TextView">

	<MenuItem Header="_File">
		<textView:TextViewMenuItem Header="_Open" CommandEnum="File_Open"/>
		<textView:TextViewMenuItem Header="Open Copied/Cut Files" CommandEnum="File_OpenCopiedCutFiles"/>
		<Separator/>
		<textView:TextViewMenuItem Header="Copy _Path" CommandEnum="File_CopyPath"/>
		<Separator/>
		<textView:TextViewMenuItem Header="E_xit" CommandEnum="File_Exit"/>
	</MenuItem>
	<MenuItem Header="_View">
		<textView:TextViewMenuItem Header="_Tiles" CommandEnum="View_Tiles" IsChecked="{Binding Parent.View, ElementName=self, Converter={guiCommon:ExpressionConverter}, ConverterParameter='[0]==\'Tiles\''}"/>
	</MenuItem>
	<guiCommon:WindowMenu ParentWindow="{Binding Parent, ElementName=self}"/>
	<guiCommon:HelpMenu/>

</Menu>
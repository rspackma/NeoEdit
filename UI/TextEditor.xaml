<Window x:Name="self" x:Class="NeoEdit.UI.TextEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ns="clr-namespace:NeoEdit.UI"
        Title="TextEditor" Height="300" Width="300" WindowState="Maximized">

	<Window.Resources>
		<Style TargetType="TextBlock">
			<Setter Property="FontFamily" Value="{Binding fontFamily, ElementName=self}"/>
			<Setter Property="FontSize" Value="{Binding fontSize, ElementName=self}"/>
		</Style>
	</Window.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<Canvas Name="canvas" SizeChanged="canvas_SizeChanged"/>
		<ScrollBar Grid.Column="1" SmallChange="1" Maximum="{Binding lines, ElementName=self}" Value="{Binding onRow, ElementName=self}" ViewportSize="{Binding viewportLines, ElementName=self}"/>
		<ScrollBar Grid.Row="1" Orientation="Horizontal" SmallChange="1" Maximum="{Binding cols, ElementName=self}" Value="{Binding onCol, ElementName=self}" ViewportSize="{Binding viewportCols, ElementName=self}"/>
	</Grid>
</Window>

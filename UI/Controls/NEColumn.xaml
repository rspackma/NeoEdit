<GridViewColumn x:Class="NeoEdit.UI.Controls.NEColumn"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:uiConverters="clr-namespace:NeoEdit.UI.Converters"
	mc:Ignorable="d">

	<GridViewColumnHeader x:Name="header" Click="headerClicked">
		<MultiBinding Converter="{uiConverters:PropertyToNameConverter}">
			<Binding Path="Property"/>
			<Binding Path="SortProperty"/>
			<Binding Path="SortAscending"/>
		</MultiBinding>
	</GridViewColumnHeader>

	<GridViewColumn.DisplayMemberBinding>
		<MultiBinding Converter="{uiConverters:RecordToStringConverter}">
			<Binding/>
			<Binding x:Name="propertyBinding" Path="Property"/>
		</MultiBinding>
	</GridViewColumn.DisplayMemberBinding>
</GridViewColumn>

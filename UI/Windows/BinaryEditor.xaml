<Window Name="binaryEditor" x:Class="NeoEdit.UI.Windows.BinaryEditor"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uiControls="clr-namespace:NeoEdit.UI.Controls"
	Title="Binary Editor" Height="300" Width="300" WindowState="Maximized">

	<Grid Name="grid">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<ScrollViewer Name="scrollViewer" VerticalScrollBarVisibility="Visible" Width="{Binding ActualWidth, ElementName=grid}" Height="{Binding ActualHeight, ElementName=grid}">
			<uiControls:BinaryView HorizontalAlignment="Left" VerticalAlignment="Top" x:Name="view" ScrollWidth="{Binding ViewportWidth, ElementName=scrollViewer}"/>
		</ScrollViewer>
	</Grid>

</Window>

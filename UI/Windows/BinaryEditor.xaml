<Window Name="binaryEditor" x:Class="NeoEdit.UI.Windows.BinaryEditor"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uiControls="clr-namespace:NeoEdit.UI.Controls"
	Title="Binary Editor" Height="400" Width="400">

	<Window.Resources>
		<Style TargetType="TextBlock">
			<Setter Property="FontFamily" Value="{Binding CustomFontFamily, ElementName=binaryEditor}"/>
			<Setter Property="FontSize" Value="{Binding CustomFontSize, ElementName=binaryEditor}"/>
		</Style>
	</Window.Resources>

	<Grid Name="grid">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Canvas Name="canvas"/>
		<ScrollBar Name="yScroll" Grid.Column="1"/>
		<ScrollBar Name="xScroll" Grid.Row="1" Orientation="Horizontal"/>
	</Grid>

</Window>

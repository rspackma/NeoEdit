<TextBox Name="self" x:Class="NeoEdit.UI.BinaryEditorUI.Value"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:binaryEditorUI="clr-namespace:NeoEdit.UI.BinaryEditorUI"
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300"
	Background="Transparent"
	Padding="0"
	BorderThickness="0"
	IsReadOnly="True">

	<TextBox.Text>
		<MultiBinding Converter="{binaryEditorUI:ValueConverter}">
			<Binding Path="Data" ElementName="self"/>
			<Binding Path="SelStart" ElementName="self"/>
			<Binding Path="SelEnd" ElementName="self"/>
			<Binding Path="Type" ElementName="self"/>
		</MultiBinding>
	</TextBox.Text>
</TextBox>

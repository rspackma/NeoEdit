<Window Name="self" x:Class="NeoEdit.UI.BinaryEditorUI.BinaryEditor"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Binary Editor" Height="400" Width="400" KeyDown="KeyDownHandler">

	<Window.Resources>
		<Style TargetType="TextBlock">
			<Setter Property="FontFamily" Value="{Binding CustomFontFamily, ElementName=self}"/>
			<Setter Property="FontSize" Value="{Binding CustomFontSize, ElementName=self}"/>
		</Style>
	</Window.Resources>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Canvas Name="canvas" MouseDown="ClickHandler" MouseUp="ClickHandler" MouseMove="MoveHandler"  Background="White"/>
		<ScrollBar Name="yScroll" Grid.Column="1"/>
		<ScrollBar Name="xScroll" Grid.Row="1" Orientation="Horizontal"/>
	</Grid>

</Window>

<guiCommon:NEWindow x:Class="NeoEdit.DBViewer.DBViewerWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiCommon="clr-namespace:NeoEdit.GUI.Common;assembly=NeoEdit.GUI"
	Title="DBViewerWindow" Width="800" Height="600" Visibility="Visible" WindowState="Maximized">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="4*"/>
		</Grid.RowDefinitions>

		<Menu Grid.Column="0" Grid.Row="0">
			<guiCommon:WindowMenu/>
			<guiCommon:HelpMenu/>
		</Menu>

		<TextBox Name="query" Grid.Column="0" Grid.Row="1" Text="This is my query"/>

		<GridSplitter Grid.Column="0" Grid.Row="2" HorizontalAlignment="Stretch" Background="Black" ResizeDirection="Rows" Height="2"/>

		<ScrollViewer Grid.Column="0" Grid.Row="3" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
			<Grid Name="results">
				<Grid.Resources>
					<Style TargetType="{x:Type Label}">
						<Setter Property="BorderBrush" Value="#40ffffff"/>
						<Setter Property="BorderThickness" Value="1"/>
					</Style>
				</Grid.Resources>
			</Grid>
		</ScrollViewer>
	</Grid>

</guiCommon:NEWindow>

<Window Name="self" x:Class="NeoEdit.Console.ConsoleTabs"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiCommon="clr-namespace:NeoEdit.GUI.Common;assembly=GUI"
	xmlns:console="clr-namespace:NeoEdit.Console"
	Width="800" Height="600" Visibility="Visible" WindowState="Maximized">

	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Menu.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Window.Resources>

	<Window.Title>
		<!--A simple Binding doesn't give any title if [0] blank-->
		<MultiBinding Converter="{guiCommon:ExpressionConverter}" ConverterParameter="StrFormat('{0} - NeoEdit Console', [0])">
			<Binding Path="Active.Location" ElementName="self"/>
		</MultiBinding>
	</Window.Title>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<StaticResource ResourceKey="ConsoleMenu"/>

		<console:Tabs Grid.Row="1" Grid.Column="0" x:Name="tabs" GetLabel="GetLabel" VerticalAlignment="Stretch"
			Items="{Binding Consoles, ElementName=self, Mode=TwoWay}"
			Active="{Binding Active, ElementName=self, Mode=TwoWay}"
			View="{Binding View, ElementName=self, Mode=TwoWay}"
		/>
	</Grid>

</Window>

<Menu Name="self" x:Class="NeoEdit.Console.ConsoleMenu"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:console="clr-namespace:NeoEdit.Console"
	xmlns:guiControls="clr-namespace:NeoEdit.GUI.Controls;assembly=NeoEdit.GUI"
	xmlns:guiConverters="clr-namespace:NeoEdit.GUI.Converters;assembly=NeoEdit.GUI">

	<MenuItem Header="_File">
		<console:ConsoleMenuItem Header="_New" CommandEnum="File_New"/>
	</MenuItem>
	<MenuItem Header="_View">
		<MenuItem Header="_Tiles" IsCheckable="True" IsChecked="{Binding Parent.Tiles, ElementName=self}"/>
	</MenuItem>
	<guiControls:WindowMenu/>
	<guiControls:HelpMenu/>

</Menu>
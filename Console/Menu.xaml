<Menu Name="self" x:Class="NeoEdit.Console.ConsoleMenu"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiCommon="clr-namespace:NeoEdit.GUI.Common;assembly=NeoEdit.GUI"
	xmlns:console="clr-namespace:NeoEdit.Console">

	<MenuItem Header="_File">
		<console:ConsoleMenuItem Header="_New" CommandEnum="File_New"/>
	</MenuItem>
	<MenuItem Header="_View">
		<console:ConsoleMenuItem Header="_Tiles" CommandEnum="View_Tiles" IsChecked="{Binding Parent.View, ElementName=self, Converter={guiCommon:ExpressionConverter}, ConverterParameter='[0] t== \'Tiles\''}"/>
	</MenuItem>
	<guiCommon:WindowMenu ParentWindow="{Binding Parent, ElementName=self}"/>
	<guiCommon:HelpMenu/>

</Menu>
<console:TabsWindow x:Name="self" x:Class="NeoEdit.Console.ConsoleTabs"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:console="clr-namespace:NeoEdit.Console"
	xmlns:guiControls="clr-namespace:NeoEdit.GUI.Controls;assembly=NeoEdit.GUI"
	xmlns:guiConverters="clr-namespace:NeoEdit.GUI.Converters;assembly=NeoEdit.GUI"
	Width="800" Height="600" Visibility="Visible" WindowState="Maximized">

	<Window.Title>
		<MultiBinding Converter="{guiConverters:NEExpressionConverter}" ConverterParameter="$&quot;{[0]} - NeoEdit Console&quot;">
			<Binding Path="ItemTabs.TopMost.Location" ElementName="self"/>
		</MultiBinding>
	</Window.Title>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<console:ConsoleMenu x:Name="menu" Parent="{Binding ElementName=self}"/>

		<console:Tabs Grid.Row="1" Grid.Column="0" x:Name="tabs"/>
	</Grid>

</console:TabsWindow>

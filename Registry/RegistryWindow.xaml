<Window Name="self" x:Class="NeoEdit.Registry.RegistryWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiControls="clr-namespace:NeoEdit.GUI.Controls;assembly=NeoEdit.GUI"
	xmlns:ig="clr-namespace:NeoEdit.GUI.Controls.ItemGridControl;assembly=NeoEdit.GUI"
	xmlns:registry="clr-namespace:NeoEdit.Registry"
	Title="NeoEdit Registry Viewer" Width="800" Height="600" Visibility="Visible" FocusManager.FocusedElement="{Binding ElementName=keys}">

	<Window.CommandBindings>
		<CommandBinding Command="registry:RegistryWindow.Command_View_Refresh" Executed="Command_Executed"/>
	</Window.CommandBindings>

	<Window.InputBindings>
		<KeyBinding Command="registry:RegistryWindow.Command_View_Refresh" Key="F5"/>
	</Window.InputBindings>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<Menu KeyboardNavigation.TabNavigation="None">
			<MenuItem Header="_View">
				<MenuItem Command="registry:RegistryWindow.Command_View_Refresh" Header="_Refresh"/>
			</MenuItem>
			<guiControls:WindowMenu/>
			<guiControls:HelpMenu/>
		</Menu>

		<DockPanel Grid.Row="1">
			<Label Content="A_ddress" Target="{Binding ElementName=location}"/>
			<TextBox Name="location" Text="{Binding Location, ElementName=self, Mode=OneWay}" HorizontalAlignment="Stretch" KeyDown="location_KeyDown"/>
		</DockPanel>

		<ig:ItemGridTree x:Name="keys" Grid.Row="2" Items="{Binding Keys, ElementName=self}"/>
	</Grid>

</Window>

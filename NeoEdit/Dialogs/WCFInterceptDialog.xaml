<controls:NEWindow x:Name="self" x:Class="NeoEdit.Program.Dialogs.WCFInterceptDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="clr-namespace:NeoEdit.Program.Controls"
	Title="WCF Intercept Calls" SizeToContent="WidthAndHeight">

	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition MinHeight="10"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<TextBlock Grid.Row="0" Grid.Column="0" Foreground="White" Text="Waiting for WCF calls..."/>

		<TextBlock Grid.Row="1" Grid.Column="0" Foreground="White">
			<TextBlock.Text>
				<MultiBinding StringFormat="{}Call count: {0}">
					<Binding Path="CallCount" ElementName="self"/>
				</MultiBinding>
			</TextBlock.Text>
		</TextBlock>

		<TextBlock Grid.Row="2" Grid.Column="0" Foreground="White">
			<TextBlock.Text>
				<MultiBinding StringFormat="{}Last call: {0}">
					<Binding Path="LastCall" ElementName="self"/>
				</MultiBinding>
			</TextBlock.Text>
		</TextBlock>

		<UniformGrid Grid.Row="4" HorizontalAlignment="Right" Rows="1">
			<Button IsDefault="True" IsCancel="True" Content="Done" Padding="10,1"/>
		</UniformGrid>
	</Grid>

</controls:NEWindow>

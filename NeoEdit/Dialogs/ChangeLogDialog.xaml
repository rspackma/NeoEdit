<Window x:Name="self" x:Class="NeoEdit.Dialogs.ChangeLogDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="NeoEdit Change Log" Width="600" Height="500" Visibility="Visible">

	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="10"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<TextBox Name="changeLog" Grid.Row="0" Text="{Binding ChangeLogText, ElementName=self}" IsReadOnly="False" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

		<Button Grid.Row="2" Width="50" HorizontalAlignment="Right" IsDefault="True" IsCancel="True" Content="Ok" Click="OKClick"/>
	</Grid>

</Window>

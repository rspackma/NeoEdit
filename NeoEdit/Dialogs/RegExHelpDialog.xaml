<Window Name="self" x:Class="NeoEdit.Dialogs.RegExHelpDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:system="clr-namespace:System;assembly=mscorlib"
	xmlns:commonDialogs="clr-namespace:NeoEdit.Dialogs;assembly=NeoEdit.Common"
	xmlns:guiDialogs="clr-namespace:NeoEdit.Dialogs"
	Title="Regular Expression Reference" SizeToContent="WidthAndHeight">

	<Window.Resources>
		<system:Int32 x:Key="nameColumn">160</system:Int32>
		<system:Int32 x:Key="descColumn">200</system:Int32>

		<DataTemplate x:Key="helpItemTemplate">
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="{Binding Name}" FontWeight="Bold" Width="{Binding DataContext.NameWidth, RelativeSource={RelativeSource AncestorType={x:Type Control}}}"/>
				<TextBlock Text="{Binding Description}" Width="{Binding DataContext.DescWidth, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
			</StackPanel>
		</DataTemplate>

		<DataTemplate x:Key="helpItemsTemplate">
			<GroupBox>
				<GroupBox.Header>
					<TextBlock Text="{Binding Name}" FontStyle="Italic"/>
				</GroupBox.Header>

				<ItemsControl ItemTemplate="{StaticResource helpItemTemplate}" ItemsSource="{Binding Items}">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<UniformGrid Columns="{Binding Columns}"/>
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
				</ItemsControl>
			</GroupBox>
		</DataTemplate>
	</Window.Resources>

	<StackPanel Margin="10" Orientation="Vertical">
		<StackPanel.Style>
			<Style>
				<Style.Resources>
					<Style TargetType="Label">
						<Setter Property="Margin" Value="0"/>
						<Setter Property="Padding" Value="2,0"/>
					</Style>
				</Style.Resources>
			</Style>
		</StackPanel.Style>

		<TextBlock Margin="0,0,0,10">
			<Italic>Regular Expression Reference</Italic>
		</TextBlock>

		<ItemsControl ItemTemplate="{StaticResource helpItemsTemplate}">
			<ItemsControl.Items>

				<commonDialogs:HelpItems Name="Anchors" Columns="3" NameWidth="{StaticResource nameColumn}" DescWidth="{StaticResource descColumn}">
					<commonDialogs:HelpItems.Items>
						<commonDialogs:HelpItem Name="^" Description="Beginning of line/selection"/>
						<commonDialogs:HelpItem Name="\A" Description="Beginning of selection"/>
						<commonDialogs:HelpItem Name="\b" Description="Word boundary"/>
						<commonDialogs:HelpItem Name="$" Description="Ending of line/selection"/>
						<commonDialogs:HelpItem Name="\Z" Description="End of selection"/>
						<commonDialogs:HelpItem Name="\B" Description="Non-word boundary"/>
						<commonDialogs:HelpItem Name="\G" Description="End of last match"/>
					</commonDialogs:HelpItems.Items>
				</commonDialogs:HelpItems>

				<commonDialogs:HelpItems Name="Characters" Columns="3" NameWidth="{StaticResource nameColumn}" DescWidth="{StaticResource descColumn}">
					<commonDialogs:HelpItems.Items>
						<commonDialogs:HelpItem Name="." Description="Any character"/>
						<commonDialogs:HelpItem Name="\d" Description="Digit: [0-9]"/>
						<commonDialogs:HelpItem Name="\w" Description="Word character: [A-Za-z0-9_]"/>
						<commonDialogs:HelpItem Name="[xyz^]" Description="Any of the characters"/>
						<commonDialogs:HelpItem Name="\D" Description="Non-digit: [^0-9]"/>
						<commonDialogs:HelpItem Name="\W" Description="Non-word character: [^A-Za-z0-9_]"/>
						<commonDialogs:HelpItem Name="[a-z]" Description="Any character in range"/>
						<commonDialogs:HelpItem Name="\s" Description="Whitespace: [ \f\n\r\t\v]"/>
						<commonDialogs:HelpItem Name="\p{name}" Description="Unicode category &quot;name&quot;"/>
						<commonDialogs:HelpItem Name="[^acgz]" Description="None of the characters"/>
						<commonDialogs:HelpItem Name="\S" Description="Non-whitespace: [^ \f\n\r\t\v]"/>
						<commonDialogs:HelpItem Name="\P{name}" Description="Non-unicode category &quot;name&quot;"/>
					</commonDialogs:HelpItems.Items>
				</commonDialogs:HelpItems>

				<commonDialogs:HelpItems Name="Repetition" Columns="3" NameWidth="{StaticResource nameColumn}" DescWidth="{StaticResource descColumn}">
					<commonDialogs:HelpItems.Items>
						<commonDialogs:HelpItem Name="* / *?" Description="Zero or more: {0,}"/>
						<commonDialogs:HelpItem Name="? / ??" Description="Zero or one: {0,1}"/>
						<commonDialogs:HelpItem Name="{}{n,} / {n,}?" Description="Match at least n times"/>
						<commonDialogs:HelpItem Name="+ / +?" Description="One or more: {1,}"/>
						<commonDialogs:HelpItem Name="{}{n} / {n}?" Description="Match n times"/>
						<commonDialogs:HelpItem Name="{}{n,m} / {n,m}?" Description="Match n - m times"/>
					</commonDialogs:HelpItems.Items>
				</commonDialogs:HelpItems>

				<commonDialogs:HelpItems Name="Grouping" Columns="3" NameWidth="{StaticResource nameColumn}" DescWidth="{StaticResource descColumn}">
					<commonDialogs:HelpItems.Items>
						<commonDialogs:HelpItem Name="(pattern)" Description="Capture group"/>
						<commonDialogs:HelpItem Name="(?&lt;name&gt;)" Description="Capture and name group"/>
						<commonDialogs:HelpItem Name="(?=...)" Description="Positive lookahead"/>
						<commonDialogs:HelpItem Name="\n" Description="Backreference group n (1 digit)"/>
						<commonDialogs:HelpItem Name="\k&lt;name&gt;" Description="Backreference named group"/>
						<commonDialogs:HelpItem Name="(?!...)" Description="Negative lookahead"/>
						<commonDialogs:HelpItem Name="(?:pattern)" Description="Non-capturing match"/>
						<commonDialogs:HelpItem Name="(?imnsx-imnsx[:pattern])" Description="Enable/disable options"/>
						<commonDialogs:HelpItem Name="(?&lt;=...)" Description="Positive lookbehind"/>
						<commonDialogs:HelpItem Name="(?&gt;pattern)" Description="Nonbacktracking"/>
						<commonDialogs:HelpItem Name="(?&lt;name1-name2&gt;pattern)" Description="Balancing group"/>
						<commonDialogs:HelpItem Name="(?&lt;!...)" Description="Negative lookbehind"/>
					</commonDialogs:HelpItems.Items>
				</commonDialogs:HelpItems>

				<commonDialogs:HelpItems Name="Conditional" Columns="3" NameWidth="{StaticResource nameColumn}" DescWidth="{StaticResource descColumn}">
					<commonDialogs:HelpItems.Items>
						<commonDialogs:HelpItem Name="x|y" Description="x or y"/>
						<commonDialogs:HelpItem Name="(?(expression)yes|no)" Description="Ternary"/>
						<commonDialogs:HelpItem Name="(?(name)yes|no)" Description="Ternary on name/number"/>
					</commonDialogs:HelpItems.Items>
				</commonDialogs:HelpItems>

				<commonDialogs:HelpItems Name="Special" Columns="3" NameWidth="{StaticResource nameColumn}" DescWidth="{StaticResource descColumn}">
					<commonDialogs:HelpItems.Items>
						<commonDialogs:HelpItem Name="\" Description="Escape character"/>
						<commonDialogs:HelpItem Name="\f" Description="Form-feed"/>
						<commonDialogs:HelpItem Name="\nn" Description="Octal character (2-3 digits)"/>
						<commonDialogs:HelpItem Name="\a" Description="Bell"/>
						<commonDialogs:HelpItem Name="\n" Description="Newline"/>
						<commonDialogs:HelpItem Name="\xnn" Description="Hex character (2 hex digits)"/>
						<commonDialogs:HelpItem Name="\b" Description="Backspace"/>
						<commonDialogs:HelpItem Name="\r" Description="Carriage return"/>
						<commonDialogs:HelpItem Name="\unnnn" Description="Unicode character (4 hex digits)"/>
						<commonDialogs:HelpItem Name="\cx" Description="Ctrl-&quot;x&quot;"/>
						<commonDialogs:HelpItem Name="\t" Description="Tab"/>
						<commonDialogs:HelpItem/>
						<commonDialogs:HelpItem Name="\e" Description="Escape"/>
						<commonDialogs:HelpItem Name="\v" Description="Vertical tab"/>
					</commonDialogs:HelpItems.Items>
				</commonDialogs:HelpItems>

				<commonDialogs:HelpItems Name="Substitution" Columns="3" NameWidth="{StaticResource nameColumn}" DescWidth="{StaticResource descColumn}">
					<commonDialogs:HelpItems.Items>
						<commonDialogs:HelpItem Name="$number" Description="Group number"/>
						<commonDialogs:HelpItem Name="$_" Description="Whole string"/>
						<commonDialogs:HelpItem Name="$`" Description="Before match"/>
						<commonDialogs:HelpItem Name="${name}" Description="Group name"/>
						<commonDialogs:HelpItem Name="$&amp;" Description="Whole match"/>
						<commonDialogs:HelpItem Name="$'" Description="After match"/>
						<commonDialogs:HelpItem Name="$$" Description="Literal $"/>
						<commonDialogs:HelpItem Name="$+" Description="Last group"/>
					</commonDialogs:HelpItems.Items>
				</commonDialogs:HelpItems>

			</ItemsControl.Items>
		</ItemsControl>

		<Button Click="OkClick" IsDefault="True" IsCancel="True" Content="Ok" Margin="0,10,0,0" Padding="20,1" HorizontalAlignment="Right"/>
	</StackPanel>

</Window>
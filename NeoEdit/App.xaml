<Application x:Class="NeoEdit.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiCommon="clr-namespace:NeoEdit.GUI.Common;assembly=GUI">

	<Application.Resources>
		<Style TargetType="MenuItem">
			<Setter Property="InputGestureText" Value="{Binding RelativeSource={RelativeSource Self}, Mode=OneWay, Converter={guiCommon:InputGestureTextConverter}}"/>
		</Style>
		<x:NullExtension x:Key="Unused"/>
	</Application.Resources>

</Application>

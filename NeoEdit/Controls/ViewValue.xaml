<UserControl Name="self" x:Class="NeoEdit.Program.Controls.ViewValue"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="clr-namespace:NeoEdit.Program.Controls"
	MouseLeftButtonDown="OnClick" Margin="2">

	<Border BorderBrush="#404040" BorderThickness="1" CornerRadius="2" Background="Transparent">
		<TextBlock Margin="5,2" VerticalAlignment="Center" HorizontalAlignment="Right">
			<TextBlock.Resources>
				<Style TargetType="controls:ViewValue" BasedOn="{StaticResource {x:Type TextBlock}}"/>
			</TextBlock.Resources>

			<TextBlock.Text>
				<MultiBinding Converter="{controls:ViewValueConverter}">
					<Binding ElementName="self"/>
					<Binding Path="Data" ElementName="self"/>
					<Binding Path="HasSel" ElementName="self"/>
				</MultiBinding>
			</TextBlock.Text>
		</TextBlock>
	</Border>
</UserControl>
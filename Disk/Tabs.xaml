<guiControls:NEWindow Name="self" x:Class="NeoEdit.Disk.DiskTabs"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:disk="clr-namespace:NeoEdit.Disk"
	xmlns:guiControls="clr-namespace:NeoEdit.GUI.Controls;assembly=NeoEdit.GUI"
	xmlns:guiConverters="clr-namespace:NeoEdit.GUI.Converters;assembly=NeoEdit.GUI"
	Width="800" Height="600" Visibility="Visible" WindowState="Maximized">

	<Window.Title>
		<!--A simple Binding doesn't give any title if [0] blank-->
		<MultiBinding Converter="{guiConverters:NEExpressionConverter}" ConverterParameter="([0] == &quot;&quot; ? &quot;Custom File List&quot; : [0]) + &quot; - NeoEdit Disk Viewer&quot;">
			<Binding Path="TopMost.Item.Location" ElementName="self"/>
		</MultiBinding>
	</Window.Title>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<disk:DiskMenu x:Name="menu" Parent="{Binding ElementName=self}"/>

		<disk:Tabs Grid.Row="1" Grid.Column="0" x:Name="tabs" TabLabelBinding="{Binding Item.TabLabel}" VerticalAlignment="Stretch"
			Items="{Binding DiskWindows, ElementName=self, Mode=TwoWay}"
			TopMost="{Binding TopMost, ElementName=self, Mode=TwoWay}"
			Tiles="{Binding Tiles, ElementName=self, Mode=TwoWay}"
		/>
	</Grid>

</guiControls:NEWindow>

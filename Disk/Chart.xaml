<Window x:Name="self" x:Class="NeoEdit.Disk.Chart" x:ClassModifier="internal"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiCommon="clr-namespace:NeoEdit.GUI.Common;assembly=NeoEdit.GUI"
	Visibility="Visible" Title="Disk Usage" Width="800" Height="600" MinWidth="400" MinHeight="300">

	<Grid Name="grid" Margin="5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="5"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<ScrollViewer Grid.Row="0" Grid.Column="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Name="scroller" Focusable="False">
			<ScrollViewer.MaxWidth>
				<MultiBinding Converter="{guiCommon:ExpressionConverter}" ConverterParameter="[0]-5-[3]+[2]-[1]">
					<Binding Path="ActualWidth" ElementName="grid"/>
					<Binding Path="ActualHeight" ElementName="grid"/>
					<Binding Path="ActualHeight" ElementName="self"/>
					<Binding Path="MinHeight" ElementName="self"/>
				</MultiBinding>
			</ScrollViewer.MaxWidth>
			<Grid Name="legend"/>
		</ScrollViewer>
		<Canvas Grid.Row="0" Grid.Column="2" Name="pieChart"/>
	</Grid>

</Window>

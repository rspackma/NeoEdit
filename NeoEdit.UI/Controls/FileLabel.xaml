<UserControl Name="self" x:Class="NeoEdit.UI.Controls.NEFileLabel"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Border Name="border" CornerRadius="4" Margin="2" BorderThickness="2">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="12"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>

			<TextBlock Name="text" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Foreground="White" Margin="4,-4,0,0"/>
			<Button Name="close" Grid.Row="0" Grid.Column="1" Content="🗙" BorderThickness="0" VerticalAlignment="Center" Margin="2,-6,0,0" Foreground="Red" Focusable="False" HorizontalAlignment="Right" Click="OnCloseClick"/>
		</Grid>
	</Border>

</UserControl>

<guiControls:NEWindow x:Name="self" x:Class="NeoEdit.TextEdit.TextEditTabs"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiControls="clr-namespace:NeoEdit.GUI.Controls;assembly=NeoEdit.GUI"
	xmlns:guiConverters="clr-namespace:NeoEdit.GUI.Converters;assembly=NeoEdit.GUI"
	xmlns:textEdit="clr-namespace:NeoEdit.TextEdit"
	Width="800" Height="600" Visibility="Visible" WindowState="Maximized">

	<Window.Title>
		<!--A simple Binding doesn't give any title if [0] blank-->
		<MultiBinding Converter="{guiConverters:NEExpressionConverter}" ConverterParameter="StrFormat(&quot;{0} - NeoEdit Text Editor&quot;, [0])">
			<Binding Path="TopMost.Item.FileName" ElementName="self"/>
		</MultiBinding>
	</Window.Title>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<textEdit:TextEditMenu x:Name="menu" Parent="{Binding ElementName=self}"/>

		<textEdit:Tabs Grid.Row="1" Grid.Column="0" x:Name="tabs" TabLabelBinding="{Binding Item.TabLabel}" VerticalAlignment="Stretch"
			Items="{Binding TextEditors, ElementName=self, Mode=TwoWay}"
			TopMost="{Binding TopMost, ElementName=self, Mode=TwoWay}"
			Tiles="{Binding Tiles, ElementName=self, Mode=TwoWay}"
		/>
	</Grid>

</guiControls:NEWindow>

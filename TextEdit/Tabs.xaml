<Window Name="self" x:Class="NeoEdit.TextEdit.TextEditTabs"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiCommon="clr-namespace:NeoEdit.GUI.Common;assembly=NeoEdit.GUI"
	xmlns:textEdit="clr-namespace:NeoEdit.TextEdit"
	Width="800" Height="600" Visibility="Visible" WindowState="Maximized">

	<Window.Title>
		<!--A simple Binding doesn't give any title if [0] blank-->
		<MultiBinding Converter="{guiCommon:ExpressionConverter}" ConverterParameter="StrFormat('{0} - NeoEdit Text Editor', [0])">
			<Binding Path="Active.FileName" ElementName="self"/>
		</MultiBinding>
	</Window.Title>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<textEdit:TextEditMenu Parent="{Binding ElementName=self}"/>

		<textEdit:Tabs Grid.Row="1" Grid.Column="0" x:Name="tabs" GetLabel="GetLabel" VerticalAlignment="Stretch"
			Items="{Binding TextEditors, ElementName=self, Mode=TwoWay}"
			Active="{Binding Active, ElementName=self, Mode=TwoWay}"
			View="{Binding View, ElementName=self, Mode=TwoWay}"
		/>
	</Grid>

</Window>

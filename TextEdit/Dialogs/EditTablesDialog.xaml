<guiControls:ModalDialog Name="self" x:Class="NeoEdit.TextEdit.Dialogs.EditTablesDialog" x:ClassModifier="internal"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiControls="clr-namespace:NeoEdit.GUI.Controls;assembly=NeoEdit.GUI"
	Title="Edit Tables" SizeToContent="WidthAndHeight">

	<StackPanel Margin="10">
		<TabControl SelectedItem="{Binding CurrentTab, ElementName=self}" ItemsSource="{Binding Tabs, ElementName=self}" SelectionChanged="TabControlSelectionChanged"/>
		<UniformGrid HorizontalAlignment="Right" Rows="1" Margin="0,10,0,0">
			<Button Click="OkClick" IsDefault="True" Content="Ok" Padding="10,1"/>
			<Button IsCancel="True" Content="Cancel" Padding="10,1"/>
		</UniformGrid>
	</StackPanel>

</guiControls:ModalDialog>

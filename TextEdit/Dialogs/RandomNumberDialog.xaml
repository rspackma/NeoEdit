<guiControls:ModalDialog Name="self" x:Class="NeoEdit.TextEdit.Dialogs.RandomNumberDialog" x:ClassModifier="internal"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiControls="clr-namespace:NeoEdit.GUI.Controls;assembly=NeoEdit.GUI"
	Title="Random number" SizeToContent="WidthAndHeight" FocusManager.FocusedElement="{Binding ElementName=minValue}">

	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="150"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition Height="10"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<Label Grid.Row="0" Grid.Column="0" Content="Mi_nimum:" Target="{Binding ElementName=minValue}"/>
		<guiControls:NumericUpDown Grid.Row="0" Grid.Column="1" Name="minValue" Value="{Binding MinValue, ElementName=self}"/>

		<Label Grid.Row="1" Grid.Column="0" Content="Ma_ximum:" Target="{Binding ElementName=maxValue}"/>
		<guiControls:NumericUpDown Grid.Row="1" Grid.Column="1" Name="maxValue" Value="{Binding MaxValue, ElementName=self}"/>

		<UniformGrid Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Right" Rows="1">
			<Button Click="OkClick" IsDefault="True" Content="Ok" Padding="10,1"/>
			<Button IsCancel="True" Content="Cancel" Padding="10,1"/>
		</UniformGrid>
	</Grid>
</guiControls:ModalDialog>

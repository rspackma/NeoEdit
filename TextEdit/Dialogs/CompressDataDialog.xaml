<guiControls:ModalDialog x:Name="self" x:Class="NeoEdit.GUI.Dialogs.CompressDataDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiControls="clr-namespace:NeoEdit.GUI.Controls;assembly=NeoEdit.GUI"
	xmlns:guiConverters="clr-namespace:NeoEdit.GUI.Converters;assembly=NeoEdit.GUI"
	Title="Compress Data" SizeToContent="Height" Width="400" FocusManager.FocusedElement="{Binding ElementName=compressorType}">

	<Grid Margin="10" Name="content">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition MinHeight="10"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Label Grid.Row="0" Grid.Column="0" Content="_Input:" Target="{Binding ElementName=inputCodePage}" HorizontalAlignment="Right"/>
		<ComboBox Grid.Row="0" Grid.Column="1" Name="inputCodePage" SelectedValue="{Binding InputCodePage, ElementName=self}"/>

		<Label Grid.Row="1" Grid.Column="0" Content="_Type:" Target="{Binding ElementName=compressorType}" HorizontalAlignment="Right"/>
		<ComboBox Grid.Row="1" Grid.Column="1" Name="compressorType" SelectedValue="{Binding CompressorType, ElementName=self}"/>

		<Label Grid.Row="2" Grid.Column="0" Content="_Output:" Target="{Binding ElementName=outputCodePage}" HorizontalAlignment="Right"/>
		<ComboBox Grid.Row="2" Grid.Column="1" Name="outputCodePage" SelectedValue="{Binding OutputCodePage, ElementName=self}"/>

		<UniformGrid Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Right" Rows="1">
			<Button Click="OkClick" IsDefault="True" Content="Ok" Padding="10,1"/>
			<Button IsCancel="True" Content="Cancel" Padding="10,1"/>
		</UniformGrid>
	</Grid>

</guiControls:ModalDialog>

<guiControls:ModalDialog Name="self" x:Class="NeoEdit.TextEdit.Dialogs.CombinationsPermutationsDialog" x:ClassModifier="internal"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:guiControls="clr-namespace:NeoEdit.GUI.Controls;assembly=NeoEdit.GUI"
	xmlns:guiConverters="clr-namespace:NeoEdit.GUI.Converters;assembly=NeoEdit.GUI"
	Title="Combinations/Permutations" SizeToContent="WidthAndHeight" FocusManager.FocusedElement="{Binding ElementName=itemCount}">

	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="60"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition MinHeight="10"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Label Grid.Row="0" Grid.Column="0" Content="_Items (n):" Target="{Binding ElementName=itemCount}" HorizontalAlignment="Right"/>
		<guiControls:NumericUpDown Grid.Row="0" Grid.Column="1" Name="itemCount" Value="{Binding ItemCount, ElementName=self}" Minimum="1"/>

		<Label Grid.Row="1" Grid.Column="0" Content="_Use (r):" Target="{Binding ElementName=useCount}" HorizontalAlignment="Right"/>
		<guiControls:NumericUpDown Grid.Row="1" Grid.Column="1" Name="useCount" Value="{Binding UseCount, ElementName=self}" Minimum="1"/>

		<StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
			<RadioButton GroupName="type" Content="_Combinations" IsChecked="{Binding Type, ElementName=self, Converter={guiConverters:RadioConverter}, ConverterParameter=Combinations}" Focusable="False" Margin="0,0,10,0" VerticalAlignment="Center"/>
			<RadioButton GroupName="type" Content="_Permutations" IsChecked="{Binding Type, ElementName=self, Converter={guiConverters:RadioConverter}, ConverterParameter=Permutations}" Focusable="False" Margin="0,0,10,0" VerticalAlignment="Center"/>
		</StackPanel>

		<CheckBox Grid.Row="3" Grid.Column="1" Content="_Repeat Items" IsChecked="{Binding Repeat, ElementName=self}" Focusable="False"/>

		<Label Grid.Row="4" Grid.Column="0" Content="Formula:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
		<StackPanel Grid.Row="4" Grid.Column="1" Name="formula" VerticalAlignment="Center" HorizontalAlignment="Center"/>

		<Label Grid.Row="5" Grid.Column="0" Content="Total Results:" HorizontalAlignment="Right"/>
		<TextBox Grid.Row="5" Grid.Column="1" BorderBrush="Transparent" IsReadOnly="True" Text="{Binding NumResults, ElementName=self, StringFormat=n0}" HorizontalAlignment="Right"/>

		<UniformGrid Grid.Row="7" Grid.ColumnSpan="2" HorizontalAlignment="Right" Rows="1">
			<Button Click="OkClick" IsDefault="True" Content="Ok" Padding="10,1"/>
			<Button IsCancel="True" Content="Cancel" Padding="10,1"/>
		</UniformGrid>
	</Grid>

</guiControls:ModalDialog>

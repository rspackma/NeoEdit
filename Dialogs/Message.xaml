<Window Name="self" x:Class="NeoEdit.Dialogs.Message"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Message" Height="90" Width="500">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<TextBox Name="textBox" Text="{Binding Text, ElementName=self}" IsReadOnly="True"/>
		<UniformGrid Name="buttons" Grid.Row="1" MaxWidth="100">
			<UniformGrid.Resources>
				<Style TargetType="{x:Type Button}">
					<EventSetter Event="Click" Handler="ButtonHandler"/>
					<Setter Property="Margin" Value="3,0"/>
				</Style>
			</UniformGrid.Resources>
		</UniformGrid>
	</Grid>
</Window>

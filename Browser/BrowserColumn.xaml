<GridViewColumn x:Class="NeoEdit.Browser.BrowserColumn"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:browserConverters="clr-namespace:NeoEdit.Browser.Converters"
	mc:Ignorable="d">

	<GridViewColumnHeader x:Name="header" Click="HeaderClicked">
		<MultiBinding Converter="{browserConverters:PropertyToSortIndicatorHeader}">
			<Binding Path="Property"/>
			<Binding Path="SortProperty"/>
			<Binding Path="SortAscending"/>
		</MultiBinding>
	</GridViewColumnHeader>
</GridViewColumn>

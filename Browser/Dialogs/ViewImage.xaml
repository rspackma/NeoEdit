<Window Name="self" x:Class="NeoEdit.Browser.Dialogs.ViewImage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Image" Width="500" Height="400" Visibility="Visible" FocusManager.FocusedElement="{Binding ElementName=okButton}">

	<Grid Margin="10,5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		
		<Label Content="{Binding FileName, ElementName=self}"/>
		
		<Image Name="img" Grid.Row="1" Source="{Binding FileName, ElementName=self}"/>

		<Button Name="okButton" Grid.Row="2" Click="okClick" HorizontalAlignment="Right" Width="50" IsCancel="True" IsDefault="True" Content="Ok"/>
	</Grid>
</Window>

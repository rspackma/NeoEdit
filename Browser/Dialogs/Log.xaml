<Window Name="self" x:Class="NeoEdit.Browser.Dialogs.Log"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Log" Width="800" Height="400" FocusManager.FocusedElement="{Binding ElementName=okButton}">

	<Grid Margin="10,5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		
		<Label Content="Messages"/>
		
		<TextBox Grid.Row="1" Name="messages" IsReadOnly="True" Text="{Binding Messages, ElementName=self}"/>

		<Button Name="okButton" Grid.Row="2" Click="okClick" HorizontalAlignment="Right" Width="50" IsCancel="True" IsDefault="True" Content="Ok"/>
	</Grid>
</Window>
